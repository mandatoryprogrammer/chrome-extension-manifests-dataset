{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "js": [
        "jquery-2.1.3.min.js",
        "content.js"
      ],
      "css": [
        "main.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "Trick a Friend into Thinking that Their Screen is Broken",
  "icons": {
    "128": "img/logo_128.png",
    "16": "img/logo_16.png",
    "48": "img/logo_48.png"
  },
  "incognito": "spanning",
  "manifest_version": 2,
  "name": "Screen Shatter",
  "version": "0.1",
  "permissions": [
    "*://*/*",
    "tabs",
    "webRequest",
    "notifications",
    "storage"
  ],
  "web_accessible_resources": [
    "img/crack.png",
    "glass.mp3"
  ]
}
