{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Postie",
  "version": "0.6",
  "description": "Helps users save Linkedin posts",
  "homepage_url": "https://github.com/iArunava/Postie/",
  "icons": {
    "32": "icons/postie-24.png"
  },
  "permissions": [
    "notifications",
    "alarms",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources": [
    "icons/postie-16.png"
  ],
  "browser_action": {
    "default_icon": "./icons/postie-24.png",
    "default_title": "Postie",
    "default_popup": "./popup/postie_popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/feed/*",
        "*://*.linkedin.com/in/*recent-activity/*"
      ],
      "js": [
        "./assets/jquery.min.js",
        "./content_scripts/postie.js"
      ]
    }
  ]
}
