{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Console Deals to Reddit",
  "version": "0.6.2",
  "content_scripts": [
    {
      "matches": [
        "https://store.playstation.com/*",
        "https://www.xbox.com/*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "content.js"
      ]
    }
  ],
  "page_action": {
    "default_icon": "img/icon-128x128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/icon-128x128.png"
  },
  "permissions": [
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
