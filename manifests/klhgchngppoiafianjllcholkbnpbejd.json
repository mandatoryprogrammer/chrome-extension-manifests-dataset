{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Disable WebUSB",
  "description": "Disables the WebUSB API for all websites.",
  "version": "1.3.0",
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "file://*"
      ],
      "match_about_blank": true,
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "disable_webusb.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*",
    "file://*"
  ]
}
