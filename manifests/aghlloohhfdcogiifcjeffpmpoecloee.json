{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "EE Killfile",
  "manifest_version": 2,
  "version": "0.22",
  "description": "Hides any posts matching a regex in Expression Engine fora",
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://www.baseballthinkfactory.org/forums/viewthread/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
