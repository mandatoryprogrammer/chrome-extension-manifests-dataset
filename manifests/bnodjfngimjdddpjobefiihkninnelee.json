{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Burstmarks",
  "version": "0.2",
  "description": "快速定位最近使用的、最近添加的书签。",
  "permissions": [
    "tabs",
    "chrome://favicon/",
    "bookmarks",
    "history",
    "contextMenus",
    "clipboardWrite"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "打开 Burstmarks",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2
}
