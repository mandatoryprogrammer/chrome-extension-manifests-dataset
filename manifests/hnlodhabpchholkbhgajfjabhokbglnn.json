{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MemPass",
  "description": "Complex passwords, remembered by a simple phrase.",
  "version": "1.1",
  "browser_action": {
    "default_icon": "icons/chrome_opt_icon.png",
    "default_popup": "tabs.html",
    "default_title": "MemPass"
  },
  "icons": {
    "16": "icons/icon-bitty.png",
    "48": "icons/icon-small.png",
    "128": "icons/icon-large.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "https://ajax.googleapis.com/",
    "system.cpu",
    "system.memory",
    "system.storage"
  ],
  "background": {
    "scripts": [
      "mempass/mempass.min.js",
      "js/mempass-context.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/text-input-listener.js"
      ]
    }
  ]
}
