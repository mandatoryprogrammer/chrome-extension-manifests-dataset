{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Is It Gonna Rain?",
  "version": "0.2",
  "description": "Tells you if it's likely to rain in the next hour. Basically: do you need to bring an umbrella when you go out to lunch?",
  "background": {
    "scripts": [
      "index.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/weather-shower.png"
    }
  },
  "permissions": [
    "declarativeContent",
    "storage",
    "alarms"
  ],
  "manifest_version": 2
}
