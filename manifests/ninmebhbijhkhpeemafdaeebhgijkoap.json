{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "tone & translate",
  "version": "3",
  "manifest_version": 2,
  "description": "Chrome Extension to access IBM Watson API",
  "icons": {
    "128": "ibmwatson.png"
  },
  "author": "Collins Westnedge, cred: Shankar Venkatachalam1/India/IBM",
  "background": {
    "scripts": [
      "contentscript.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/",
        "http://*/*"
      ],
      "all_frames": true,
      "js": [
        "contentscript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "contentscript.js"
  ],
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
