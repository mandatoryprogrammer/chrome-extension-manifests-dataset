{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Basecamp Shortcut",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Basecamp Shortcut for Google Chrome",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
