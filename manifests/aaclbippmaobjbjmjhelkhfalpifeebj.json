{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HFR - Mes sujets",
  "version": "1.2.3",
  "description": "Vérifie si les sujets drapalisés sur forum.hardware.fr ont de nouveaux messages.",
  "background": {
    "page": "bg.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "default_locale": "fr",
  "browser_action": {
    "default_icon": "images/flag.gif"
  },
  "icons": {
    "128": "images/128.png",
    "48": "images/48.png",
    "16": "images/icon.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "https://forum.hardware.fr/",
    "http://forum.hardware.fr/"
  ]
}
