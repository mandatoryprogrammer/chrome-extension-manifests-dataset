{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Headliner",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A simple extension for Google Chrome that adds an article's headline to the tooltip of short links to the BBC news website.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "headliner.js"
      ],
      "all_frames": true
    }
  ],
  "homepage_url": "http://github.com/wibblymat/headliner",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
