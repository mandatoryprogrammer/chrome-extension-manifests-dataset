{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Version Ninja",
  "version": "2.2",
  "author": "Cihan Keser",
  "homepage_url": "http://about.ckeser.com",
  "description": "Extends VersionOne to generate formatted (commit) message for a task.",
  "icons": {
    "48": "icons/enzo-48.jpg",
    "96": "icons/enzo-96.jpg"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www52.v1host.com/*"
      ],
      "js": [
        "jquery-3.3.1.slim.min.js",
        "version-ninja.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ]
}
