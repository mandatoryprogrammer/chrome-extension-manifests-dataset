{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Link Checker",
  "manifest_version": 2,
  "version": "2.0.1",
  "description": "Link checking using XHR.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Link Checker",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "URI.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "jquery.js",
        "linkchecker.js"
      ],
      "all_frames": true
    }
  ],
  "options_page": "dashboard.html",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ]
}
