{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "VK Webcam",
  "version": "1.4",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "description": "Позволяет прикреплять фото с веб-камеры к личным сообщениям и постам.",
  "permissions": [
    "tabs",
    "webRequest",
    "*://*.vk.com/*",
    "*://*.vk.me/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "inject.js"
  ]
}
