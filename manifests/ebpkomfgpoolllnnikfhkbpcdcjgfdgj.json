{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Блокнот",
  "short_name": "Блокнот",
  "author": "Андрей Грибин",
  "version": "2.0",
  "manifest_version": 2,
  "icons": {
    "128": "icon/icon128.png"
  },
  "description": "Позволяет очень удобно хранить и получать доступ к временной информации",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon/icon128.png",
    "default_popup": "panel.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "commands": {
    "opentxt": {
      "suggested_key": {
        "default": "Ctrl+Shift+8",
        "mac": "Command+Shift+8"
      },
      "description": "opentxt",
      "global": true
    }
  }
}
