{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "includes/content.js"
      ]
    }
  ],
  "name": "EasyCollab",
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/button.png"
  },
  "web_accessible_resources": [
    "res/*"
  ],
  "description": "An easier way to stay connected to the work you are doing in activeCollab â€” right in your browser toolbar!",
  "background": {
    "page": "background.html"
  },
  "homepage_url": "http://easycollab.io",
  "version": "1.1.2",
  "options_page": "options.html",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": "icons/button.png",
    "default_title": "EasyCollab button"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "webNavigation",
    "notifications",
    "webRequest",
    "webRequestBlocking"
  ]
}
