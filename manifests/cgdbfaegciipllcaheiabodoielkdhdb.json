{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SpringRecruit",
  "version": "1.0",
  "description": "A free ATS tool for your hiring needs",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "identity",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://recruit.hirist.com/*"
      ],
      "js": [
        "togglePanel.js"
      ]
    }
  ],
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "popup.html"
  ]
}
