  "name": "德云色の科学家助手",
  "manifest_version": 2,
  "version": "2.0.1",
  "author": "lync",
  "icons": {
    "48": "img/icon_48.png"
  },
  "browser_action": {
    "default_icon": "img/icon_disabled.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
