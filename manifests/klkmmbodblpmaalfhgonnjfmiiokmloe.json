{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bullshit Detector",
  "version": "2020.06",
  "description": "Chráňte vašich blízkych pred nedôveryhodným obsahom",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "assets/dialog/dialog.html"
  },
  "background": {
    "scripts": [
      "domains.js",
      "tools.js",
      "background.js"
    ]
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "tabs",
    "activeTab",
    "proxy",
    "contextMenus"
  ],
  "short_name": "Bullshit Detector"
}
