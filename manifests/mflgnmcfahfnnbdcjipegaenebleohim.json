{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Amazon UK Smile Redirector",
  "version": "1.0",
  "description": "Redirects Amazon UK to Amazon UK Smile so you never miss the chance to donate to your charity",
  "permissions": [
    "webRequest",
    "*://amazon.co.uk/*",
    "*://www.amazon.co.uk/*",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "images/amznsmile_16.png",
    "32": "images/amznsmile_32.png",
    "48": "images/amznsmile_48.png",
    "128": "images/amznsmile_128.png",
    "144": "images/amznsmile_144.png"
  },
  "manifest_version": 2
}
