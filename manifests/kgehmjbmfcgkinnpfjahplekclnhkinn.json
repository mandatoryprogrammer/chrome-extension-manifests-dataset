{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bitrise build status indicator",
  "version": "1.0",
  "description": "A small Chrome extension which shows the actual status of a Bitrise build in the Chrome tab's title!",
  "permissions": [
    "activeTab",
    "tabs",
    "https://*.bitrise.io/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/bit16.png",
    "32": "images/bit32.png",
    "48": "images/bit48.png",
    "128": "images/bit128.png"
  },
  "manifest_version": 2
}
