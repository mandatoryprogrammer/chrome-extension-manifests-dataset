      "js": [
        "tidy_content.js"
      ]
    }
  ],
  "permissions": [
    "clipboardWrite",
    "<all_urls>",
    "tabs",
    "storage"
  ],
  "offline_enabled": true,
  "applications": {
    "gecko": {
      "id": "{3b56bcc7-54e5-44a2-9b44-66c3ef58c13e}",
