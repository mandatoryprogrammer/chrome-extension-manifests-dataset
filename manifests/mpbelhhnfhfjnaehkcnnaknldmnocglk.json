{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HTML Validator",
  "version": "0.9.8.8",
  "manifest_version": 2,
  "description": "HTML Validator",
  "devtools_page": "tidy_devtools.html",
