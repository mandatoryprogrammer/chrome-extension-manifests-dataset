{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Copy title & URL",
  "version": "1.0.1",
  "description": "Copy title & URL",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Copy title & URL"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ]
}
