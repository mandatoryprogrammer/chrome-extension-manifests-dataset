{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "y4d",
  "description": "The code formater and syntax highlighter in Yammer's messages.",
  "icons": {
    "128": "icon_128.png"
  },
  "version": "0.4.0",
  "default_locale": "en",
  "permissions": [
    "background",
    "notifications",
    "https://*.yammer.com/*",
    "https://*.assets-yammer.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.yammer.com/*"
      ],
      "css": [
        "content/index.css"
      ],
      "js": [
        "content/index.js"
      ]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "background/index.js"
    ]
  },
  "options_page": "options/index.html"
}
