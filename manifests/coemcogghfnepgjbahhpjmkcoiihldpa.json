{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Linkfix",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Linkfix adds a Copy Link button to Google Search results",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "Linkfix"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/search?*"
      ],
      "js": [
        "lib/jquery-2.1.1.min.js",
        "scripts/main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
