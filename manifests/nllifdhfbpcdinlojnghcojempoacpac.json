{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Better PTT (批踢踢)",
  "version": "1.0",
  "manifest_version": 2,
  "description": "支援 keyboard navigation，瀏覽「批踢踢」更順手。",
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.ptt.cc/bbs/*"
      ],
      "js": [
        "better-ptt.user.js"
      ],
      "css": [
        "better-ptt.css"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
