{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "css": [
        "custom.css"
      ],
      "js": [
        "jquery.js",
        "hngist.js"
      ],
      "matches": [
        "http://news.ycombinator.com/item?id=*",
        "http://news.ycombinator.com/threads?id=*",
        "https://news.ycombinator.com/item?id=*",
        "https://news.ycombinator.com/threads?id=*"
      ]
    }
  ],
  "description": "Collapses comment thread into summary sentence on Hacker News",
  "icons": {
    "128": "hngist.png"
  },
  "manifest_version": 2,
  "name": "HNGist",
  "permissions": [
    "http://news.ycombinator.com/item?id=*",
    "https://news.ycombinator.com/item?id=*"
  ],
  "version": "1.7.0",
  "short_name": "HNGist"
}
