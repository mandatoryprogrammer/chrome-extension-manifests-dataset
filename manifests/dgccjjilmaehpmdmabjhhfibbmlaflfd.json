{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Magic Reader",
  "description": "Adjust the font size and line spacing of the main content of a webpage automatically based on your preference.",
  "version": "1.4.1",
  "options_page": "options.html",
  "icons": {
    "16": "glasses24.png",
    "48": "glasses48.png",
    "128": "glasses128.png"
  },
  "author": "Kelvin Hung",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery.js",
        "content_script.js",
        "eye-test.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Magic Reader",
    "default_icon": "glasses24.png"
  },
  "manifest_version": 2
}
