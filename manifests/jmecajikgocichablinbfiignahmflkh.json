{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Riot API Assistant",
  "version": "0.1.2",
  "description": "Riot API Assistant provides tools to improve developer's experience with the Riot API Development Portal.",
  "icons": {
    "48": "img/icon48.png"
  },
  "browser_action": {
    "default_title": "Riot API Assistant",
    "default_icon": "img/icon19.png",
    "default_popup": "btn/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://developer.riotgames.com/discussion/*"
      ],
      "css": [
        "css/custom.css"
      ],
      "js": [
        "jquery/jquery.min.js",
        "browser.js"
      ]
    }
  ],
  "minimum_chrome_version": "23",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.api.pvp.net/"
  ]
}
