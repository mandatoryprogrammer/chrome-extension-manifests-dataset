{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Piazza Links",
  "description": "This extension allows users to easily navigate to Piazza posts and share questions with friends.",
  "version": "1.0",
  "icons": {
    "16": "icons/logo_16.png",
    "32": "icons/logo_32.png",
    "48": "icons/logo_48.png",
    "128": "icons/logo_128.png",
    "300": "icons/logo_300.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "exclude_matches": [
        "*://piazza.com/*"
      ],
      "js": [
        "replaceWithPiazzaLinks.js"
      ],
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_icon": "icons/logo_300.png",
    "default_title": "Click to copy the post number"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "webNavigation",
    "*://*/*"
  ],
  "options_page": "options.html"
}
