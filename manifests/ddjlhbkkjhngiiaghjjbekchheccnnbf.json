{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Scratch Notifier",
  "description": "Get browser notifications when you get new messages on Scratch.",
  "version": "1.0.2",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "https://*.scratch.mit.edu/*",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "cookies"
  ]
}
