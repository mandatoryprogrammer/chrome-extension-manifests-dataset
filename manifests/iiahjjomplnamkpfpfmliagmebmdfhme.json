{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Play Ya!",
  "description": "Press Ctrl(Command)+Shift+0 to toggle video playback, Ctrl(Command)+Shift+1 to delete history. Resume playback after 3-4 seconds.",
  "version": "1.2",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "bookmarks",
    "activeTab",
    "*://*/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js",
      "jquery.min.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Play/Pause Videos"
  },
  "commands": {
    "play-pause": {
      "description": "Play/Pause videos",
      "global": true,
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      }
    },
    "flush-all": {
      "description": "Flush all videos which are queued to be played",
      "global": true,
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      }
    }
  }
}
