{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "iCheckMovies Shortcut",
  "version": "1.0",
  "description": "Open iCheckMovies page of the current IMDb page.",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "icon-19.png",
    "default_title": "Open this movie's iCheckMovies page!"
  },
  "permissions": [
    "tabs"
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}
