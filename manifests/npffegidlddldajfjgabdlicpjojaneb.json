{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Clippy",
  "short_name": "Clippy",
  "version": "2.0.8",
  "manifest_version": 2,
  "description": "Clip HTML straight from websites!",
  "background": {
    "scripts": [
      "main.js",
      "clippy.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/dash.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-1.11.2.min.js",
        "select2.min.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "pageCapture",
    "tabCapture",
    "clipboardRead",
    "clipboardWrite",
    "<all_urls>"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "windows": "Ctrl+Shift+X",
        "mac": "Command+Shift+X",
        "chromeos": "Ctrl+Shift+X",
        "linux": "Ctrl+Shift+X"
      }
    }
  }
}
