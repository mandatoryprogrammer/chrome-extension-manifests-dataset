{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ola Trip Stats",
  "version": "1.3",
  "description": "See stats related to your ola rides",
  "background": {
    "persistent": false,
    "scripts": [
      "js/libs/jquery.js",
      "js/libs/sweetalert2.all.min.js",
      "js/background.js",
      "js/common.js"
    ]
  },
  "permissions": [
    "*://olacabs.com/*",
    "*://*.olacabs.com/*",
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://olacabs.com/*",
        "*://*.olacabs.com/*",
        "https://*.olacabs.com/*",
        "https://book.olacabs.com/*"
      ],
      "js": [
        "js/libs/jquery.js",
        "js/libs/sweetalert2.all.min.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "images/ola_stats_browser_icon.png"
  },
  "manifest_version": 2
}
