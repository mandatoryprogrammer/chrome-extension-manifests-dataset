{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/greenship.png",
      "19": "icons/greenship.png",
      "32": "icons/greenship.png",
      "38": "icons/greenship.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "GreenShip"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "jquery-3.4.1.min.js",
        "./content-script.js",
        "./popup/popup.js"
      ],
      "match_about_blank": false,
      "matches": [
        "https://www.amazon.com/gp/buy/spc/handlers/*"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "description": "Go Green and Save with GreenShip. The ultimate tool to enhance environmental awareness with online-shopping.",
  "icons": {
    "128": "icons/greenship.png",
    "16": "icons/greenship.png",
    "48": "icons/greenship.png"
  },
  "manifest_version": 2,
  "name": "GreenShip",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "https://www.amazon.com/*",
    "http://www.amazon.com/*"
  ],
  "version": "2.0.0",
  "web_accessible_resources": [
    "images/*",
    "css/*",
    "fonts/*",
    "imgs/*",
    "ga.js"
  ]
}
