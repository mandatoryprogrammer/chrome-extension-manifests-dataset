{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "vkZvuk",
  "description": "Изменение звуковых уведомлений ВКонтакте",
  "version": "2.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "options_ui": {
    "page": "pages/options.html",
    "chrome_style": true
  },
  "externally_connectable": {
    "matches": [
      "*://vkzvuk.ru/*"
    ]
  },
  "icons": {
    "128": "images/icon-128.png",
    "16": "images/icon-32.png",
    "48": "images/icon-96.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon-black-32.png",
      "32": "images/icon-black-48.png"
    },
    "default_title": "vkZvuk"
  },
  "incognito": "spanning",
  "options_page": "pages/options.html",
  "permissions": [
    "contextMenus",
    "webRequest",
    "storage",
    "webRequestBlocking",
    "*://*.vk.me/*",
    "*://*.vk.com/*",
    "tabs"
  ]
}
