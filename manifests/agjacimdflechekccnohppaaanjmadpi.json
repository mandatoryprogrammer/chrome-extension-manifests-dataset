{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hacker News Collapsible and Colored Comments",
  "homepage_url": "https://github.com/louisinhongkong/Collapsible-comments-for-Hacker-News",
  "version": "1.0",
  "description": "Collapsible and alternating colored comments for HN Hacker News",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://news.ycombinator.com/*"
      ],
      "js": [
        "jquery.js",
        "hn.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
