{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hacker News Sorted",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Adds ability to sort news on Hacker News (news.ycombinator.com)",
  "icons": {
    "128": "images/128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://news.ycombinator.com/*"
      ],
      "include_globs": [
        "*://*/",
        "*://*/ask",
        "*://*/news",
        "*://*/news2",
        "*://*/newest",
        "*://*/noobstories",
        "*://*/x?fnid=*"
      ],
      "css": [
        "css/main.css"
      ],
      "js": [
        "js/core.js",
        "js/dom.js",
        "js/converter.js",
        "js/parser.js",
        "js/presenter.js",
        "js/sorter.js",
        "js/main.js"
      ]
    }
  ]
}
