{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Copy text with Alt-Click",
  "version": "2.0.1",
  "manifest_version": 2,
  "description": "Copy text with Alt-Click. Easy and fast copy tool.",
  "default_locale": "en",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "clipboardWrite"
  ],
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-2.2.0.min.js",
        "menu.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
