{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hacker News Comment Finder",
  "description": "This extension opens the Hacker News comment thread for your current page",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Open Hacker News comments",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab"
  ]
}
