{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Right-hand Side for Google Searchâ„¢",
  "version": "0.1",
  "description": "This extension integrates search results from different sources (e.g. Wikipeida, Wolfram Alpha, Twitter) into Google search results",
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "icon/icon-16.png",
      "24": "icon/icon-24.png",
      "32": "icon/icon-32.png"
    },
    "default_popup": "html/popup.html"
  },
  "author": "Steven Liu",
  "background": {
    "scripts": [
      "js/background.js",
      "js/fetch.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*"
      ],
      "css": [
        "css/rhs.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/sources.js",
        "js/helper.js",
        "js/Wikimedia.js",
        "js/BingDictionary.js",
        "js/BaiduTranslate.js",
        "js/WolframAlpha.js",
        "js/NetSpeak.js",
        "js/Twitter.js",
        "js/MoeDict.js",
        "js/Reddit.js",
        "js/Daizhige.js",
        "js/Quora.js",
        "js/Zhihu.js",
        "js/Wechat.js",
        "js/Iciba.js"
      ]
    }
  ],
  "homepage_url": "https://github.com/stevenliuyi/google-rhs",
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": false
  },
  "permissions": [
    "tabs",
    "storage",
    "*://*.google.com/*",
    "https://api.wolframalpha.com/*",
    "https://xtk.azurewebsites.net/*",
    "https://api.twitter.com/*",
    "https://www.moedict.tw/*",
    "http://www.daizhige.org/*",
    "https://www.quora.com/*",
    "*://*.sogou.com/*",
    "https://dict-co.iciba.com/*"
  ],
  "short_name": "RHS"
}
