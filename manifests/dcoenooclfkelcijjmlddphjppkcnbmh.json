{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Refligator",
  "description": "Automatically generates referral link for websites specified by the user and copies the generated link to the clipboard.",
  "version": "3.1",
  "options_page": "options.html",
  "background": {
    "persistent": false,
    "scripts": [
      "/js/refligator.js",
      "/js/bootstrap.min.js"
    ]
  },
  "browser_action": {
    "default_icon": "diamond.png"
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "clipboardRead"
  ]
}
