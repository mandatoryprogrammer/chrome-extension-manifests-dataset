{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SteemPlus",
  "description": "Lightweight toolbox for Steemit",
  "version": "3.8.3.5",
  "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'; child-src 'unsafe-eval' 'self'",
  "browser_action": {
    "default_icon": "src/img/logo.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://*.steemplus.app/*"
  ],
  "commands": {
    "busyfy": {
      "suggested_key": {
        "default": "Alt+Shift+B",
        "mac": "Alt+Shift+B"
      },
      "description": "-> Busy"
    },
    "steemify": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "-> Steemit"
    },
    "utopify": {
      "suggested_key": {
        "default": "Alt+Shift+U",
        "mac": "Alt+Shift+U"
      },
      "description": "-> Utopian"
    },
    "steemdify": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "-> Steemd"
    }
  },
  "web_accessible_resources": [
    "src/img/*",
    "src/fonts/*",
    "vendor/DataTables-1.10.16/images/*",
    "https://steemitimages.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://steemit.com/*",
        "https://steemitwallet.com/*",
        "https://busy.org/*",
        "https://mspsteem.com/*",
        "https://utopian.io/*"
      ],
      "js": [
        "vendor/global_const.js",
        "vendor/jquery.js",
        "vendor/logger.js",
        "vendor/jquery.livequery.min.js",
        "vendor/sc2.min.js",
        "vendor/jquery.justifiedGallery.min.js",
        "vendor/timeago.js",
        "vendor/steemjs.js",
        "vendor/decode.min.js",
        "vendor/bootstrap.js",
        "vendor/datatables.min.js",
        "vendor/lodash.min.js",
        "vendor/remarkable.min.js",
        "vendor/sanitize-html.min.js",
        "vendor/moment.min.js",
        "vendor/Chart.min.js",
        "vendor/toastr.min.js",
        "vendor/smi/HtmlReady.js",
        "vendor/smi/base_tab.js",
        "vendor/smi/sanitize.js",
        "vendor/smi/utils.js",
        "vendor/unslider/unslider-min.js",
        "vendor/jquery.markdown-live.js",
        "vendor/js-markdown-extra.js",
        "vendor/bootstrap-slider/bootstrap-slider.min.js",
        "vendor/jquery.easy-autocomplete.min.js",
        "vendor/steem_keychain.js",
        "main.js",
        "src/js/loginSteemPlus.js",
        "src/js/delegate.js",
        "src/js/account_val.js",
        "src/js/beneficiaries.js",
        "src/js/dropdown.js",
        "src/js/rank.js",
        "src/js/resteem.js",
        "src/js/feedplus.js",
        "src/js/transferTo.js",
        "src/js/oneup.js",
        "src/js/postVoteList.js",
        "src/js/external_link_tab.js",
        "src/js/vote_tab.js",
        "src/js/search_bar.js",
        "src/js/mentions_tab.js",
        "src/js/vote_weight_slider.js",
        "src/js/followers_table.js",
        "src/js/boost_button.js",
        "src/js/gif_picker.js",
        "src/js/user_info_popover.js",
        "src/js/blog_histogram.js",
        "src/js/md_editor_beautifier.js",
        "src/js/post_floating_bottom_bar.js",
        "src/js/favorite_section.js",
        "src/js/board_reward.js",
        "src/js/witnesses_tab.js",
        "src/js/article_count.js",
        "src/js/wallet_history.js",
        "src/js/rewards_tab.js",
        "src/js/author_popup_info.js",
        "src/js/add_signature.js",
        "src/js/resteem_indicator.js",
        "src/js/tip_user.js",
        "src/js/utopian_post.js",
        "src/js/select_reward_dropdown.js",
        "src/js/vote_weight_slider_busy.js",
        "src/js/beneficiary_donation.js",
        "src/js/steemplus_points.js",
        "src/js/dtube_post.js",
        "src/js/steem_monsters.js",
        "src/js/premium_features.js"
      ],
      "css": [
        "vendor/unslider/unslider.css",
        "vendor/font-awesome.min.css",
        "vendor/unslider/unslider-dots.css",
        "vendor/bootstrap.css",
        "vendor/bootstrap-grid.css",
        "vendor/btn.css",
        "vendor/datatables.min.css",
        "vendor/justifiedGallery.min.css",
        "vendor/toastr.min.css",
        "vendor/bootstrap-slider/bootstrap-slider.min.css",
        "vendor/easy-autocomplete.min.css",
        "vendor/easy-autocomplete.themes.min.css",
        "src/css/delegate.css",
        "src/css/mentions.css",
        "src/css/account_val.css",
        "src/css/beneficiaries.css",
        "src/css/rank.css",
        "src/css/resteem.css",
        "src/css/feedplus.css",
        "src/css/loginSteemPlus.css",
        "src/css/transferTo.css",
        "src/css/oneup.css",
        "src/css/favorite_section.css",
        "src/css/boost_button.css",
        "src/css/steemit_more_info.css",
        "src/css/board_reward.css",
        "src/css/dropdown.css",
        "src/css/witnesses_tab.css",
        "src/css/wallet_history.css",
        "src/css/rewards_tab.css",
        "src/css/author_popup_info.css",
        "src/css/add_signature.css",
        "src/css/resteem_indicator.css",
        "src/css/tip_user.css",
        "src/css/select_reward_dropdown.css",
        "src/css/vote_weight_slider_busy.css",
        "src/css/utopian_post.css",
        "src/css/misc.css",
        "src/css/steemplus_points.css",
        "src/css/dtube_post.css",
        "src/css/steem_monsters.css",
        "src/css/premium_features.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://steemmonsters.com/*",
        "https://splinterlands.io/*"
      ],
      "js": [
        "vendor/global_const.js",
        "vendor/jquery.js",
        "vendor/sc2.min.js",
        "vendor/steemjs.js",
        "vendor/smi/sm_utils.js",
        "vendor/steem_keychain.js",
        "main.js",
        "src/js/sm_batch.js"
      ],
      "css": [
        "src/css/sm_batch.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
