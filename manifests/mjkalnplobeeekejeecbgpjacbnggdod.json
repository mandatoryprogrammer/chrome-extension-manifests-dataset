{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Refden",
  "description": "Extension for adding references to refden.com",
  "version": "2.5.0",
  "background": {
    "persistent": false,
    "scripts": [
      "dist/build/background/bundle.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Refden"
  },
  "permissions": [
    "cookies",
    "storage",
    "https://doi.org/",
    "https://www.refden.co/",
    "https://www.refden.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/build/app/bundle.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
