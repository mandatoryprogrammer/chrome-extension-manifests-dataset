{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "webStickyNotes",
  "version": "2.0.5",
  "manifest_version": 2,
  "description": "Add Web Sticky Notes on your browser",
  "icons": {
    "48": "source/48.png"
  },
  "permissions": [
    "contextMenus",
    "<all_urls>",
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "source/48.png",
    "default_title": "webStickyNotes",
    "default_popup": "browseraction/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options/index.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "match_about_blank": true,
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "css": [
        "source/mkstyles.css"
      ]
    }
  ]
}
