{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Highlighter",
  "description": "This extension lets you take highlights and store them",
  "version": "1.0",
  "browser_action": {
    "default_title": "Highlighter",
    "default_icon": "highlight.png"
  },
  "background": {
    "scripts": [
      "index.js"
    ]
  },
  "commands": {
    "save-highlight": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Save selected text"
    }
  },
  "icons": {
    "16": "highlight.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus"
  ]
}
