{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "version": "0.7.0",
  "manifest_version": 2,
  "description": "__MSG_appDesc__",
  "short_name": "Unikey",
  "default_locale": "vi",
  "author": "Lê Quốc Tuấn <mr.lequoctuan@gmail.com>",
  "background": {
    "scripts": [
      "unikey.js",
      "main.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "input",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "input_components": [
    {
      "name": "Vietnamese - Unikey (Telex)",
      "type": "ime",
      "id": "unikey-telex",
      "description": "Telex input style",
      "language": "vi",
      "layouts": []
    },
    {
      "name": "Vietnamese - Unikey (Telex - Simple)",
      "type": "ime",
      "id": "unikey-telex-simple",
      "description": "Simple Telex input style",
      "language": "vi",
      "layouts": []
    },
    {
      "name": "Vietnamese - Unikey (VNI)",
      "type": "ime",
      "id": "unikey-vni",
      "description": "VNI input style",
      "language": "vi",
      "layouts": []
    }
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
