{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bilibili 录播姬",
  "version": "2.1.3",
  "description": "一键录制 Bilibili 直播间视频，不用错过主播的精彩时刻。",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background/index.js"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {},
  "permissions": [
    "*://*.bilibili.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.bilibili.com/*"
      ],
      "js": [
        "content/index.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "injected/index.js",
    "injected/index.css"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
