{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FleXML",
  "short_name": "FleXML",
  "description": "Navigate XMLs more efficiently and view them in style",
  "version": "1.0.0",
  "author": "Luis Granados",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": "images/logo128px.png",
    "default_title": "FleXML"
  },
  "icons": {
    "16": "images/logo16px.png",
    "32": "images/logo32px.png",
    "48": "images/logo48px.png",
    "128": "images/logo128px.png",
    "512": "images/logo512px.png"
  },
  "web_accessible_resources": [
    "images/*"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "css": [
        "styles/content.css",
        "styles/header.css"
      ],
      "matches": [
        "http://*/*.xml",
        "https://*/*.xml",
        "file:///*.xml"
      ],
      "js": [
        "scripts/constants.js",
        "scripts/content.js",
        "scripts/header.js"
      ],
      "run_at": "document_end"
    }
  ]
}
