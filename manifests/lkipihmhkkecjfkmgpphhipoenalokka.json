{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "short_name": "Material Downloads",
  "name": "Material Downloads - Download Manager",
  "author": "Marvin Peter",
  "version": "3.1.0",
  "homepage_url": "https://www.marvinpeter.com",
  "description": "Manage your downloads from Chrome's toolbar like you would do with Firefox.",
  "icons": {
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png",
    "256": "icons/icon_256.png"
  },
  "background": {
    "page": "views/background.html"
  },
  "browser_action": {
    "default_icon": "icons/icon_32.png",
    "default_popup": "views/popup.html",
    "default_title": "Downloads"
  },
  "options_ui": {
    "page": "views/options.html",
    "chrome_style": false
  },
  "minimum_chrome_version": "75.0.0.0",
  "permissions": [
    "tabs",
    "downloads",
    "downloads.open",
    "downloads.shelf",
    "storage"
  ]
}
