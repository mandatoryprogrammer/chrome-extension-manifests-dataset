{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bullet subtitle",
  "description": "Add bullet subtitle(streaming comments) function to any web page.",
  "version": "1.3",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "author": "Achilles Xu",
  "browser_action": {
    "default_icon": "icon19.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://kids.lekan.com/*",
        "http://video.sina.com.cn/*",
        "http://bbs.perlchina.org/*"
      ],
      "js": [
        "jquery-2.1.0.min.js",
        "amplify.min.js",
        "ccl/CommentCore.js",
        "inject1.js"
      ],
      "css": [
        "ccl/base.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "jquery-2.1.0.min.js",
      "lsarray.js",
      "eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "http://www.hukaa.com/"
  ]
}
