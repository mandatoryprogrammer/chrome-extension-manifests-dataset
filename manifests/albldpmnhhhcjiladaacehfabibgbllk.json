{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "short_name": "Poshify Utilities",
  "name": "Poshify Utilities",
  "description": "Some posh utilities for Shopify developers and merchants ðŸŽ‰. Notably, metafields editor",
  "author": "Husseyexplores",
  "version": "3.0.0",
  "browser_action": {
    "default_icon": "/img/128.png",
    "default_popup": "/popup.html"
  },
  "icons": {
    "16": "/img/16.png",
    "48": "/img/48.png",
    "128": "/img/128.png"
  },
  "permissions": [
    "https://*.myshopify.com/admin*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.myshopify.com/admin*"
      ],
      "exclude_matches": [
        "https://*.myshopify.com/admin/themes/*/editor*",
        "https://*.myshopify.com/admin/*.xml*"
      ],
      "css": [
        "/static/css/bundle.css"
      ],
      "js": [
        "/static/js/bundle.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "/static/css/bundle.css"
  ]
}
