{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GitHub image link converter",
  "description": "convert image link '[!image]...' to '<img ...>' ",
  "version": "0.4",
  "browser_action": {
    "default_title": "GitHub image link converter"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/"
      ],
      "js": [
        "js/jquery.js",
        "js/script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "activeTab"
  ]
}
