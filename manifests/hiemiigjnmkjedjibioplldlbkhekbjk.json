{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_title__",
  "description": "__MSG_description__",
  "version": "0.1.5",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "context.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "http://*/",
        "https://*/*",
        "https://*/"
      ],
      "js": [
        "highLight.js"
      ],
      "css": [
        "highlight.css"
      ],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
    },
    "default_popup": "popup.html"
  },
  "default_locale": "zh_CN",
  "commands": {
    "highlight": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "高亮页面内容"
    }
  }
}
