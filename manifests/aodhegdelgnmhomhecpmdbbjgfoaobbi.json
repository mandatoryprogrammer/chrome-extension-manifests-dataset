{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Jeeves",
  "description": "This extension will search for cards in Hearthstone and show their details.",
  "version": "1.2.3",
  "browser_action": {
    "default_icon": "assets/img/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://joshjohnson.io/*"
      ],
      "js": [
        "assets/js/jquery.min.js",
        "assets/js/popup.js"
      ]
    }
  ]
}
