{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "The Internet for Left-Handers©",
  "version": "1.0",
  "manifest_version": 2,
  "homepage_url": "http://www.silviolorusso.com/theinternet4left-handers/",
  "description": "The Internet for Left-Handers© makes the Internet left-friendly. Silvio Lorusso, 2012",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "name": "Activate The Internet for Left-Handers©",
    "default_icon": "icon-right.png",
    "icons": [
      "icon-right.png",
      "icon-left.png"
    ]
  }
}
