{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "short_name": "ps-indicator",
  "name": "Platform Status Indicator",
  "description": "This extension adds an indicator that shows whether the page has listed in the platform statuses.",
  "version": "0.2",
  "icons": {
    "16": "icons/icon16x16.png",
    "32": "icons/icon32x32.png",
    "48": "icons/icon48x48.png",
    "64": "icons/icon64x64.png",
    "128": "icons/icon128x128.png"
  },
  "page_action": {
    "default_icon": "icons/icon64x64.png",
    "default_popup": "pageAction/index.html"
  },
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "permissions": [
    "alarms",
    "idle",
    "storage",
    "tabs"
  ],
  "applications": {
    "gecko": {
      "id": "platform-status-indicator@plateostatus.herokuapp.com",
      "strict_min_version": "45.0.0"
    }
  }
}
