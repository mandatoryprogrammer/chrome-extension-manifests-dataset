{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "StopProcrastination",
  "version": "0.9",
  "description": "Don't let yourself be distracted while working online! We allow you to easily block the sites that cause you to procrastinate.",
  "browser_action": {
    "default_icon": "./view/assets/icon128.png",
    "default_popup": "./view/main_menu/main_menu.html"
  },
  "background": {
    "page": "./controller/background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "./model/model.js",
        "./controller/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "./view/options/options.html",
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "icons": {
    "128": "./view/assets/icon128.png",
    "16": "./view/assets/icon16.png",
    "48": "./view/assets/icon48.png"
  }
}
