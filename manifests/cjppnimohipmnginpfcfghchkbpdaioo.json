{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.2.0",
  "short_name": "LGTM",
  "permissions": [
    "storage"
  ],
  "icons": {
    "128": "res/icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery-2.1.1.min.js",
        "js/mustache.js",
        "js/lgtm.js"
      ],
      "css": [
        "css/lgtm.css"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "web_accessible_resources": [
    "css/lgtm.css",
    "templates/*",
    "js/pushstate.js",
    "res/favicon.png"
  ],
  "options_page": "options/options.html",
  "default_locale": "en"
}
