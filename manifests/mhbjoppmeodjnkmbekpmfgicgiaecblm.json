{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hebrew Tooltip Translation for Google Chromeâ„¢",
  "version": "2.8",
  "manifest_version": 2,
  "description": "Translate Hebrew to English and vice-versa via tooltip",
  "permissions": [
    "http://www.morfix.co.il/*"
  ],
  "icons": {
    "16": "HTT-16.png",
    "48": "HTT-48.png",
    "128": "HTT-128.png"
  },
  "background": {
    "scripts": [
      "HTT-background.js"
    ],
    "persistent": true
  },
  "options_page": "HTT-options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "htt.css"
      ],
      "js": [
        "HTT-contentscript.js"
      ]
    }
  ]
}
