{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bitbucket JIRA Linker",
  "version": "0.7",
  "browser_action": {
    "default_icon": "icons/wax48.png"
  },
  "icons": {
    "16": "icons/wax16.png",
    "48": "icons/wax48.png",
    "128": "icons/wax128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "description": "Links commit messages to JIRA ticket",
  "content_scripts": [
    {
      "matches": [
        "https://bitbucket.org/*",
        "file:///*/test*.html"
      ],
      "js": [
        "js/jquery-3.1.1.min.js",
        "js/content.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
