{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Romaji To..",
  "manifest_version": 2,
  "version": "1.01",
  "description": "Convert highlighted text to either Hiragana or Katakana!",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "*://*/*"
  ],
  "browser_action": {
    "default_title": "Romaji Convert"
  }
}
