{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "author": "Steven A. Bjornson",
  "name": "Bandcamp Enhancement Suite",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "Provides extra functionality for Bandcamp",
  "homepage_url": "https://github.com/sabjorn/BandcampEnhancementSuite",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Bandcamp Enhancement Suite",
    "default_popup": "html/browser_action.html"
  },
  "permissions": [
    "http://*.bandcamp.com/*",
    "https://*.bandcamp.com/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.bandcamp.com/*",
        "https://*.bandcamp.com/*"
      ],
      "js": [
        "dist/main.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ]
}
