{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Spice",
  "description": "Spice",
  "version": "1.0",
  "icons": {
    "128": "images/icon2/icon-128.png"
  },
  "default_locale": "en",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+S",
        "mac": "Alt+S",
        "chromeos": "Alt+S",
        "linux": "Alt+S"
      }
    }
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon2/icon-19.png",
      "38": "images/icon2/icon-38.png"
    },
    "default_title": "Spice"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "*://*/*",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "styles/main.css",
    "images/microphone.png",
    "images/info.png",
    "images/mute.png",
    "images/quote.png",
    "images/icon2/icon-128.png",
    "sounds/success.mp3",
    "sounds/reject.mp3"
  ]
}
