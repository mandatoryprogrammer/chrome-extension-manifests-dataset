{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "LobbyAlarm",
  "version": "0.1.1",
  "description": "Personen, die auf LobbyPedia.de auftauchen, werden hervorgehoben. Das Plugin operiert (ohne Server) nur in deinem Browser.",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "data.js",
        "popper.min.js",
        "tooltip.min.js",
        "detect.js"
      ],
      "css": [
        "style.css"
      ],
      "exclude_globs": [
        "https://lobbypedia.de/*"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  }
}
