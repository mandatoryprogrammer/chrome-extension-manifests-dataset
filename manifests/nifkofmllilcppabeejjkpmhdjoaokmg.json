{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Keep Calm (and book quietly)",
  "version": "1.0.0",
  "author": "Bruno Bonnin",
  "description": "Remove the persuavise messages and get only the raw informations: the hotels and their price.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "name": "Click to change visibility",
    "default_icon": {
      "16": "images/with-ads-16.png",
      "32": "images/with-ads-32.png",
      "48": "images/with-ads-48.png",
      "96": "images/with-ads-96.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.booking.com/*",
        "https://*.hotels.com/*",
        "https://*.trivago.fr/*",
        "https://*.trivago.com/*"
      ],
      "js": [
        "keepcalm.js"
      ]
    }
  ],
  "icons": {
    "16": "images/with-ads-16.png",
    "32": "images/with-ads-32.png",
    "48": "images/with-ads-48.png",
    "96": "images/with-ads-96.png"
  },
  "manifest_version": 2
}
