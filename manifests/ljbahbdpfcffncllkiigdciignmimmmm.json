{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pivotal UI Tweaks",
  "version": "0.0.2",
  "description": "Doctor up a Pivotal page to add more functionality",
  "icons": {
    "16": "images/desk16.png",
    "48": "images/desk48.png",
    "128": "images/desk128.png"
  },
  "browser_action": {
    "default_icon": "images/desk16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.pivotaltracker.com/n/projects/*"
      ],
      "js": [
        "jquery.min.js",
        "insert_branch_names.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "branch_name_template.html",
    "images/*.png"
  ],
  "permissions": [
    "activeTab"
  ]
}
