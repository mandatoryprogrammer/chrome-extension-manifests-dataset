{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Scrollhide",
  "description": "Scroll down to kill the sticky navigation. Scroll up to bring it back.",
  "version": "1.2.3",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js",
        "foreground.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "38": "hide38.png"
    },
    "default_title": "Disable Scrollhide"
  },
  "icons": {
    "128": "hide128.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "31"
}
