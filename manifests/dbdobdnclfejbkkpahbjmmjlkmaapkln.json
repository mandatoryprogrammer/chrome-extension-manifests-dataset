{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Next Long Weekend",
  "description": "Check the upcoming long weekend!",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "nlw.html"
  },
  "background": {
    "scripts": [
      "scripts/nlw.js"
    ]
  },
  "permissions": [
    "background",
    "alarms"
  ]
}
