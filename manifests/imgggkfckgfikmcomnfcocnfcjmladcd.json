{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_name__",
  "version": "0.7.0.16",
  "description": "__MSG_description__",
  "default_locale": "en",
  "author": "Flattr",
  "minimum_chrome_version": "51",
  "incognito": "not_allowed",
  "icons": {
    "16": "icons/flattr-16x16-default.png",
    "32": "icons/flattr-32x32-default.png",
    "48": "icons/flattr-48x48-default.png",
    "64": "icons/flattr-64x64-default.png",
    "96": "icons/flattr-96x96-default.png",
    "128": "icons/flattr-128x128-default.png"
  },
  "background": {
    "scripts": [
      "lib/background/index.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "lib/content/index.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/flattr-16x16-disabled.png",
      "32": "icons/flattr-32x32-disabled.png"
    },
    "default_popup": "ui/popup.html",
    "default_title": "Flattr"
  },
  "options_ui": {
    "page": "ui/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "alarms",
    "history",
    "idle",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest"
  ]
}
