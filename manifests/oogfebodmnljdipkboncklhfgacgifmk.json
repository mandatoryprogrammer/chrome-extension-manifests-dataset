{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Eko certificate verification",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Screen capture your current page in entirety and reliably!",
  "browser_action": {
    "default_icon": "eko-icon.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "activeTab",
    "https://*.blupig.net/",
    "http://localhost:3000/*"
  ],
  "icons": {
    "16": "eko-icon.png",
    "48": "eko-icon.png",
    "128": "eko-icon.png"
  }
}
