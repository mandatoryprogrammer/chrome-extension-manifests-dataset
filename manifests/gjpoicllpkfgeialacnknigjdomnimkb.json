{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pinterest Video Comment System",
  "version": "2.0.2",
  "description": "Pinterest Video Comment System",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "background"
  ],
  "content_security_policy": "default-src 'self' https://www.youtube.com https://s.ytimg.com 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2,
  "content_scripts": [
    {
      "include_globs": [
        "http://www.pinterest.com/*"
      ],
      "matches": [
        "http://www.pinterest.com/pin/*"
      ],
      "run_at": "document_idle",
      "js": [
        "jquery.min.js",
        "froogaloop2.min.js",
        "contentscript.js",
        "ytplayer_api.js",
        "www-widgetapi.js"
      ]
    }
  ]
}
