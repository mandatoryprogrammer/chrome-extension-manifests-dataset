{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TC LOCALE",
  "description": "TopCoder Locale",
  "version": "1.0.4",
  "options_page": "html/settings.html",
  "permissions": [
    "storage"
  ],
  "icons": {
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://community.topcoder.com/PactsMemberServlet?module=PaymentHistory*"
      ],
      "css": [
        "css/pacts.css"
      ],
      "js": [
        "js/pacts.js"
      ]
    },
    {
      "matches": [
        "https://www.topcoder.com/*",
        "https://software.topcoder.com/*"
      ],
      "css": [
        "css/convert-on-highlight.css"
      ],
      "js": [
        "js/convert-on-highlight.js"
      ]
    },
    {
      "matches": [
        "https://www.topcoder.com/challenge-details/*"
      ],
      "css": [
        "css/challenge-details.css"
      ],
      "js": [
        "js/challenge-details.js"
      ]
    },
    {
      "matches": [
        "https://www.topcoder.com/challenges/*"
      ],
      "css": [
        "css/challenges.css"
      ],
      "js": [
        "js/challenges.js"
      ]
    },
    {
      "matches": [
        "https://apps.topcoder.com/forums/?module=Category*",
        "https://apps.topcoder.com//forums/?module=Category*"
      ],
      "css": [
        "css/forums.css"
      ],
      "js": [
        "js/forums.js"
      ]
    },
    {
      "matches": [
        "https://apps.topcoder.com/forums/?module=Thread&threadID*",
        "https://apps.topcoder.com//forums/?module=Thread&threadID*"
      ],
      "css": [
        "css/thread.css"
      ],
      "js": [
        "js/thread.js"
      ]
    },
    {
      "matches": [
        "https://apps.topcoder.com/forums/?module=ThreadList*",
        "https://apps.topcoder.com//forums/?module=ThreadList*"
      ],
      "css": [
        "css/thread-list.css"
      ],
      "js": [
        "js/thread-list.js"
      ]
    },
    {
      "matches": [
        "http://www.topcoder.com/tc?module=ViewReviewAuctions*"
      ],
      "css": [
        "css/review-auctions.css"
      ]
    }
  ]
}
