{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Now Playing Pop-up for YouTubeâ„¢",
  "version": "2.1",
  "description": "Shows pop-up with every new song YouTube plays.",
  "author": "Yuya Tanaka",
  "default_locale": "en",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "scripts": [
      "eventpage.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.youtube.com/watch?*",
        "https://www.youtube.com/watch?*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "notifications"
  ]
}
