{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Lightning Linter Chrome",
  "version": "1.1",
  "description": "Exposes lightning-linter.herokuapp.com to Developer Console",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon-48.png",
    "default_title": "LLC"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "https://*.salesforce.com/",
    "https://lightning-linter.herokuapp.com/"
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}
