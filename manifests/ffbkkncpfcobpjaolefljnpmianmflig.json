{
  "name": "Gratipay Everywhere",
  "version": "0.14",
  "manifest_version": 2,
  "description": "The official Gratipay addon for your (currently chrome) browser, we enable Gratipay tipping icons on many of your favorite sites.",
  "update_url": "http://clients2.google.com/service/update2/crx",
  "icons": {
    "16": "icons/gratipay16.png",
    "48": "icons/gratipay48.png",
    "128": "icons/gratipay128.png",
    "256": "icons/gratipay256.png"
  },
  "browser_action": {
    "default_icon": "icons/gratipay48.png"
  },
  "permissions": [
    "https://github.com/*",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "css": [
        "button/button.css"
      ],
      "js": [
        "libs/jquery-2.0.2.min.js",
        "websites/github/github.js"
      ],
      "matches": [
        "https://github.com/*"
      ]
    },
    {
      "js": [
        "libs/jquery-2.0.2.min.js",
        "websites/twitter/twitter.js"
      ],
      "matches": [
        "https://twitter.com/*"
      ]
    },
    {
      "css": [
        "button/button.css"
      ],
      "js": [
        "libs/jquery-2.0.2.min.js",
        "websites/bitbucket/bitbucket.js"
      ],
      "matches": [
        "https://bitbucket.org/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "icons/gratipay16.png",
    "websites/twitter/widget.html"
  ]
}
