{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "metatrailer for plex",
  "description": "adds movie trailers to plex",
  "version": "1.7",
  "author": "dev@conceptualspace.net",
  "permissions": [
    "*://app.plex.tv/*",
    "*://localhost/*",
    "*://127.0.0.1/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://app.plex.tv/*",
        "*://localhost/*",
        "*://127.0.0.1/*"
      ],
      "js": [
        "jquery-3.5.1.slim.min.js",
        "arrive.min.js",
        "content_script.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
