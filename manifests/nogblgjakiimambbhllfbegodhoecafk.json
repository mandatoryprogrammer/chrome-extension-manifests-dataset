{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pipedrive RTL",
  "description": "Makes Pipedrive.com interface RTL",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "background",
    "storage",
    "https://*.pipedrive.com/*",
    "http://*.pipedrive.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.pipedrive.com/*"
      ],
      "js": [
        "js/background.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "css/pipedrive-rtl-basic.css",
    "css/pipedrive-rtl-pipelineSummary.css",
    "css/pipedrive-ltr-pipelineSummary.css"
  ],
  "browser_action": {
    "default_title": "Change pipedrive to RTL mode",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
