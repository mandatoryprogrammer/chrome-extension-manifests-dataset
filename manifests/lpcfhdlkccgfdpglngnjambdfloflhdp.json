{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Surf Notes",
  "short_name": "Take notes in the browser",
  "version": "0.1.1",
  "manifest_version": 2,
  "icons": {
    "16": "imgs/icon_16.png",
    "48": "imgs/icon_48.png",
    "64": "imgs/icon_64.png",
    "128": "imgs/icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "imgs/icon_19.png",
      "38": "imgs/icon_38.png"
    },
    "default_title": "Surf Notes",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery.js",
        "js/jquery-ui.js",
        "js/handlebars.js",
        "js/content.js"
      ],
      "css": [
        "css/jquery-ui.css",
        "css/content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "html/*"
  ],
  "content_security_policy": "default-src 'none'; style-src 'unsafe-inline'; script-src 'self' 'unsafe-eval';"
}
