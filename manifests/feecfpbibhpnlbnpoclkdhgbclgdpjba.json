{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PageStyler",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "Add more styles to web pages to make them looks better!",
  "homepage_url": "https://github.com/nmhnmh/chrome-pagestyler",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {},
  "default_locale": "en",
  "permissions": [
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://tldp.org/LDP/*",
        "*://www.tldp.org/LDP/*",
        "*://www.tldp.org/HOWTO/*",
        "*://www.safaribooksonline.com/*"
      ],
      "css": [
        "js/highlight/default.css",
        "js/highlight/xcode.css",
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "*://tldp.org/LDP/*",
        "*://www.tldp.org/LDP/*",
        "*://www.tldp.org/LDP/*",
        "*://www.safaribooksonline.com/*"
      ],
      "js": [
        "js/highlight/highlight.pack.js",
        "js/jquery/jquery.min.js",
        "js/clipboard/clipboard.min.js",
        "js/base64/base64.js",
        "src/inject/inject.js"
      ]
    }
  ]
}
