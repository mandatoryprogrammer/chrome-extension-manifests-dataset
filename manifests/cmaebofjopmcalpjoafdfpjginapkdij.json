{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "XKCD Enchancer",
  "short_name": "XKCD Enchancer",
  "description": "Enhances xkcd website experience with direct access to Explain XKCD and alt text",
  "version": "0.0.5",
  "page_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.xkcd.com/*",
        "*://xkcd.com/*"
      ],
      "js": [
        "js/jquery-2.1.4.min.js",
        "js/jquery-ui.min.js",
        "js/content.js"
      ],
      "css": [
        "style/jquery-ui.css",
        "style/style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
