{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "OCS Price per gram",
  "description": "This extension shows the price per gram on Ontario Cannabis Store pages.",
  "version": "0.3",
  "icons": {
    "16": "thc_16.png",
    "48": "thc_48.png",
    "128": "thc_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ocs.ca/products/*"
      ],
      "js": [
        "jquery-2.2.0.min.js",
        "ppg.js"
      ]
    }
  ]
}
