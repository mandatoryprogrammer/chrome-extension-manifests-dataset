{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Better Destiny.gg",
  "manifest_version": 2,
  "description": "Restores emotes and faith in humanity to users of destiny.gg",
  "icons": {
    "48": "icon.png",
    "128": "icon128.png"
  },
  "permissions": [
    "*://*.destiny.gg/*",
    "*://*.ustream.tv/*",
    "*://*.overrustle.com/*",
    "*://*.downthecrop.xyz/*",
    "*://*.overrustlelogs.net/*"
  ],
  "background": {
    "scripts": [
      "lib/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.destiny.gg/embed/chat*"
      ],
      "css": [
        "betterdgg.css"
      ],
      "js": [
        "betterdgg.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "embed/*",
    "images/*",
    "injected.js"
  ],
  "version": "1.7.1"
}
