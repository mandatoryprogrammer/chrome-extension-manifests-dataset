{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ProductHunt-Instant",
  "description": "Instant Notifier for all new products posted on ProductHunt.com",
  "short_name": "PH-Instant",
  "version": "1.2",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "static/ph_instant_logo_128.png",
    "default_title": "PH-Instant"
  },
  "icons": {
    "16": "static/ph_instant_logo_16.png",
    "48": "static/ph_instant_logo_48.png",
    "128": "static/ph_instant_logo_128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "notifications"
  ]
}
