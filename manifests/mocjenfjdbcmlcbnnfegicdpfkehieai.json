{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bedflix",
  "description": "Chrome extension that interacts with Netflix.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "bedflix.png",
    "default_popup": "bedflix.html",
    "default_title": "BedFlix"
  },
  "background": {
    "scripts": [
      "js/jquery-3.2.1.min.js",
      "js/background.js"
    ]
  },
  "web_accessible_resources": [
    "test.txt"
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "webNavigation"
  ]
}
