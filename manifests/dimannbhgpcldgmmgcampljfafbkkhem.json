{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "exchange rate",
  "description": "Конвертер белорусских рублей",
  "version": "1.2.8",
  "icons": {
    "128": "128.png"
  },
  "permissions": [
    "<all_urls>",
    "notifications",
    "storage",
    "alarms"
  ],
  "browser_action": {
    "default_title": "exchange rate",
    "default_popup": "popup.html",
    "default_icon": "128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "jquery-2.1.3.min.js",
      "utils.js",
      "bg.js"
    ]
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "app.css"
      ],
      "js": [
        "jquery-2.1.3.min.js",
        "app.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
