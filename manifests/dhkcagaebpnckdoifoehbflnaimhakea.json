{
  "background": {
    "scripts": [
      "dist/common.js",
      "dist/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "WebColor Picker"
  },
  "description": "表示中のWebサイトで使用されている色をRGB形式で取得します",
  "icons": {
    "48": "icon48.png"
  },
  "name": "WebColor Picker",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "*://*/*",
    "background",
    "clipboardWrite"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "js": [
        "./dist/content_script.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "version": "0.0.9",
  "manifest_version": 2
}
