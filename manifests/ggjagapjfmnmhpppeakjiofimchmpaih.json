{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "NoSpellCheck",
  "manifest_version": 2,
  "version": "1.0.1",
  "description": "Enables spellchecking only inside of textarea elements, like Firefox.",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "ftp://*/*"
      ],
      "all_frames": true,
      "js": [
        "nospellcheck.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
