{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Segment Event Tracker",
  "manifest_version": 2,
  "version": "1.5",
  "description": "See when Segment events are being tracked.",
  "permissions": [
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
