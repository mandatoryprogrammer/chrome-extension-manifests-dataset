{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Improved xkcd Random Button",
  "short_name": "xkcd Random Button",
  "version": "1.1",
  "description": "Fixes xkcd's unreliable \"Random\" button.",
  "manifest_version": 2,
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://xkcd.com/*",
        "https://www.xkcd.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
