{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "author": "Jossef Harush",
  "manifest_version": 2,
  "name": "Ad Bro",
  "icons": {
    "128": "icon.png"
  },
  "short_name": "Ad Bro",
  "description": "Removes 'Please disable your ad-block' pop-ups",
  "offline_enabled": true,
  "version": "1",
  "content_scripts": [
    {
      "matches": [
        "*://*.ynet.co.il/*"
      ],
      "js": [
        "js/common.js",
        "js/sites/ynet.co.il.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.hwzone.co.il/*"
      ],
      "js": [
        "js/common.js",
        "js/sites/hwzone.co.il.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}
