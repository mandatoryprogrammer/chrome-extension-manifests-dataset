{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "2.0.1",
  "default_locale": "ja",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "icons": {
    "16": "icon/icon_16.png",
    "128": "icon/icon_128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "option.html",
    "chrome_style": true
  }
}
