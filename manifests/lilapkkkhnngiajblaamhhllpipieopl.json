{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "smash.gg Tournament Filter",
  "description": "Enables tournament filtering",
  "version": "0.1",
  "browser_action": {
    "default_icon": "gg.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "./css/style.css"
      ],
      "run_at": "document_end"
    }
  ]
}
