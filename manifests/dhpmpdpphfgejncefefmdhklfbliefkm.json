{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Search On Twitter",
  "description": "Adds 'Open Twitter Profile' and 'Search on Twitter' options to the context menu ",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": [
      "js/main.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/contentscript.js"
      ]
    }
  ]
}
