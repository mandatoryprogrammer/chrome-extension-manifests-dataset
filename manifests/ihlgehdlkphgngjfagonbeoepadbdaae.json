{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mojave Checkbox-Fix",
  "version": "1.0.2",
  "description": "A tiny extension to fix the checkbox appearances in macOS 11.14 Mojave.",
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "manifest_version": 2
}
