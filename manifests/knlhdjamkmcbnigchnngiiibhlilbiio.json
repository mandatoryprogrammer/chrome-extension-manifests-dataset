{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Find with Sam",
  "description": "Do you use a screen reader to search academic literature? Find with Sam works on ACM Digital Library and JSTOR!",
  "version": "1.1",
  "author": "Xavier Ho",
  "icons": {
    "128": "icon.png"
  },
  "commands": {
    "toggle-findwithsam": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Toggle Find with Sam on or off."
    }
  },
  "page_action": {
    "default_icon": {
      "19": "images/button19px.png",
      "38": "images/button38px.png"
    },
    "default_title": "Find with Sam."
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "findwithsam.css"
      ],
      "js": [
        "findwithsam.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ]
}
