{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AlmaTechPlus",
  "short_name": "AlmaTechPlus",
  "version": "3.3.5",
  "manifest_version": 2,
  "description": "Enhance productivity and experience for Alma library systems users",
  "homepage_url": "https://technion.alma.exlibrisgroup.com/SAML",
  "browser_action": {
    "default_icon": "icons/icon_48.png"
  },
  "permissions": [
    "https://*.exlibrisgroup.com/",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "style/runtime.css",
    "src/options.html",
    "src/alert.html",
    "icons/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.alma.exlibrisgroup.com/*"
      ],
      "js": [
        "lib/jquery-3.3.1.min.js",
        "src/runtime.js",
        "src/options.js",
        "src/alert.js",
        "src/analytics.js"
      ],
      "css": [
        "style/options.css",
        "style/alert.css"
      ]
    }
  ],
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}
