{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Court Record",
  "version": "1.1",
  "description": "Marks up Forum and QuickTopic posts for easy analysis",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.pokebeach.com/*"
      ],
      "css": [
        "style-beach.css"
      ],
      "js": [
        "beachMarkup.js"
      ]
    },
    {
      "matches": [
        "https://www.quicktopic.com/*"
      ],
      "css": [
        "style-qt.css"
      ],
      "js": [
        "qtMarkup.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/badge16.png",
      "32": "images/badge32.png",
      "48": "images/badge48.png",
      "128": "images/badge128.png"
    }
  },
  "icons": {
    "16": "images/badge16.png",
    "32": "images/badge32.png",
    "48": "images/badge48.png",
    "128": "images/badge128.png"
  },
  "manifest_version": 2
}
