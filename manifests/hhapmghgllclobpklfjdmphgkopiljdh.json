{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "How Is Your Text Alternative?",
  "version": "0.1.10",
  "description": "Show an overlay of all the ALT text of a website to better evaluated it's usage.",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/alt16.png",
    "32": "images/alt32.png",
    "48": "images/alt48.png",
    "128": "images/alt128.png"
  },
  "web_accessible_resources": [
    "images/*.svg",
    "images/*.png",
    "*.css"
  ]
}
