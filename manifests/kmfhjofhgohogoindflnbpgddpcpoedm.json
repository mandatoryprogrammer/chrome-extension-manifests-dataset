{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Googley Styles for Rizzoma",
  "version": "1.7.1",
  "description": "Change the Rizzoma interface to look like Gmail and other Google apps (a.k.a. Kennedy design).",
  "icons": {
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "permissions": [
    "*://rizzoma.com/drive/*",
    "*://rizzoma.com/topic/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://rizzoma.com/drive/*",
        "*://rizzoma.com/topic/*"
      ],
      "css": [
        "styles/buttons.css",
        "styles/panels.css",
        "styles/popups.css",
        "styles/toolbars.css",
        "styles/wave.css"
      ],
      "js": [
        "scripts/labels.js"
      ]
    }
  ]
}
