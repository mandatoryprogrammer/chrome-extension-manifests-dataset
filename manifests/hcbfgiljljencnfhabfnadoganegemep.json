{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "gh-full-path",
  "version": "1.0.0",
  "description": "Chrome extension to prevent omission for file path on GitHub.",
  "permissions": [
    "https://github.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "scripts/main.js"
      ]
    }
  ]
}
