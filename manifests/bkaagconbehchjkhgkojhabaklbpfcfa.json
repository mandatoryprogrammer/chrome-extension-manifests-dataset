{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Personal Capital Plus",
  "short_name": "PC Plus",
  "description": "Customize Personal Capital",
  "version": "2.2",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://home.personalcapital.com/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "options.html"
  ],
  "permissions": [
    "*://*.personalcapital.com/*",
    "storage",
    "activeTab",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ]
}
