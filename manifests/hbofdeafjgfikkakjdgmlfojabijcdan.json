{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "JSPass",
  "version": "2.0",
  "manifest_version": 2,
  "description": "Generate random passwords using PBKDF2 with a master password and a domain name.",
  "author": "tinu@humbapa.ch",
  "homepage_url": "https://github.com/humbapa/jspass",
  "icons": {
    "16": "resources/icon16.png",
    "48": "resources/icon48.png",
    "128": "resources/icon128.png"
  },
  "options_page": "options.html",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_icon": "resources/icon19.png",
    "default_title": "JSPass",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
