{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "DebugR",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Receive debugging information alongside XMLHttpRequests.",
  "icons": {
    "16": "img/16.png",
    "128": "img/128.png"
  },
  "background": {
    "scripts": [
      "js/debugr-Daemon.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/debugr-forwarder.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
