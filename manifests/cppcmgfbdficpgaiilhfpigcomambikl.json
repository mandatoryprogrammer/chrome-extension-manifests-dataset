{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Blogcast",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Blogcast generates audio versions of your articles. The Blogcast Chrome extension makes this process even easier.",
  "homepage_url": "https://blogcast.host",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Blogcast"
  },
  "omnibox": {
    "keyword": "blogcast"
  },
  "permissions": [
    "activeTab"
  ]
}
