{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Copy URL with Title",
  "short_name": "Copy URL",
  "description": "Copy title and URL using Ctrl+C(Win/Linux)/Command+C(Mac). Use Alt+C(Win/Linux)/Option+C(Mac) to get them in markdown link format.",
  "version": "1.0.0.5",
  "icons": {
    "128": "icon_128.png",
    "16": "icon_016.png",
    "32": "icon_032.png",
    "48": "icon_048.png"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "copyurlwithtitle.js",
        "toast.js"
      ],
      "run_at": "document_start"
    }
  ]
}
