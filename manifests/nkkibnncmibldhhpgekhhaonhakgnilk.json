{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Private in Public",
  "version": "1.0",
  "description": "Private in Public allows you to encrypt small sections of the content you write into webpages.",
  "manifest_version": 2,
  "homepage_url": "https://github.com/joereddington/PrivateInPublic",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "secret.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "privateinpublic.js",
        "aes.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}
