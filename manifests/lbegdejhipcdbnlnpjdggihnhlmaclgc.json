{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Soliloquy",
  "version": "1.1",
  "manifest_version": 2,
  "description": "A simple text area that appears on the side of your browser, for capturing ideas.",
  "icons": {
    "16": "img/idea-16.png",
    "48": "img/idea-48.png",
    "128": "img/idea-128.png"
  },
  "browser_action": {
    "default_title": "Soliloquy",
    "default_icon": "img/idea-48.png",
    "default_popup": "popup.html",
    "commands": {
      "execute_browser_action": {
        "suggested_key": {
          "windows": "Alt+s",
          "mac": "Alt+s",
          "chromeos": "Alt+s",
          "linux": "Alt+s"
        },
        "description": "execute browser action"
      }
    }
  },
  "permissions": [
    "activeTab",
    "background",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
