{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Esti'mate",
  "author": "Antistatique",
  "version": "1.3.0",
  "description": "Your Harvest estimate's best friend",
  "homepage_url": "https://github.com/antistatique/esti-mate/",
  "permissions": [
    "*://api.airtable.com/*",
    "webRequest",
    "storage"
  ],
  "options_ui": {
    "page": "src/settings/index.html"
  },
  "background": {
    "scripts": [
      "lib/browser-polyfill.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.harvestapp.com/estimates/*/edit",
        "*://*.harvestapp.com/estimates/new",
        "*://*.harvestapp.com/estimates/*"
      ],
      "js": [
        "lib/browser-polyfill.js",
        "lib/rx.js",
        "src/lib/summary.js",
        "src/lib/airtable.js",
        "src/lib/pm.js",
        "src/App.js",
        "src/index.js"
      ]
    }
  ],
  "icons": {
    "48": "assets/icon.png",
    "96": "assets/icon@2x.png"
  }
}
