{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "GitHub Favorites",
  "version": "1.4",
  "description": "Allows you to favorite GitHub repos to save for later instead of adding them to your watch list.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "script.js"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "https://github.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*/*"
      ],
      "exclude_globs": [
        "*.com/blog*",
        "*.com/explore*",
        "*.com/settings*",
        "*.com/inbox*",
        "*.com/repositories*",
        "*.com/popular*"
      ],
      "js": [
        "script.js"
      ]
    }
  ]
}
