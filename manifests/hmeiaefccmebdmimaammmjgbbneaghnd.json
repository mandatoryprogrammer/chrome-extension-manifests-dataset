{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CardGames.io Ad Reporter",
  "version": "1.0",
  "icons": {
    "128": "adreporter.png"
  },
  "description": "Report bad ads when you see them on CardGames.io. Sends an error report with a screenshot.",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://cardgames.io/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "<all_urls>"
  ]
}
