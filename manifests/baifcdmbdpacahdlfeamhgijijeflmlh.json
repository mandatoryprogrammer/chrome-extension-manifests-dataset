{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Netflix Navigator",
  "short_name": "NetflixNav",
  "description": "Navigate Netflix with your keyboard or game controller",
  "version": "1.0.1",
  "permissions": [
    "*://www.netflix.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.netflix.com/*"
      ],
      "css": [
        "driver.css"
      ],
      "js": [
        "jquery.js",
        "jquery.scrollTo.js",
        "driver.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "assets/Xbox360_Button_A.png",
    "controller.js"
  ],
  "icons": {
    "48": "assets/48.png",
    "128": "assets/128.png"
  }
}
