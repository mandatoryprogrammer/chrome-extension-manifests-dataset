{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Keepa - Amazon Price Tracker",
  "short_name": "Keepa",
  "version": "3.63",
  "permissions": [
    "storage",
    "contextMenus",
    "*://*.keepa.com/*",
    "*://*.amazon.com/*",
    "*://*.amzn.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.es/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.in/*",
    "*://*.amazon.com.br/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.com.au/*"
  ],
  "optional_permissions": [
    "webRequest",
    "webRequestBlocking"
  ],
  "author": "Keepa GmbH",
  "background": {
    "page": "chrome/content/background.html"
  },
  "default_locale": "en",
  "manifest_version": 2,
  "options_page": "chrome/content/options.html",
  "homepage_url": "https://keepa.com",
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "chrome/content/content.js"
      ],
      "matches": [
        "*://*.keepa.com/*",
        "*://*.amazon.com/*",
        "*://*.amzn.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.de/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.it/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.es/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.in/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.com.au/*"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": {
      "32": "icons/i32.png",
      "48": "icons/i48.png"
    },
    "default_title": "Keepa automatically loads on Amazon product pages."
  },
  "description": "Adds price history charts and the option to be alerted on price drops to all Amazon sites.",
  "icons": {
    "128": "icons/i128.png",
    "16": "icons/i16.png",
    "32": "icons/i32.png",
    "48": "icons/i48.png"
  }
}
