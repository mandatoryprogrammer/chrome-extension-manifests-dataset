{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SS TV Remote",
  "short_name": "TV Remote",
  "description": "A TV remote control compatible with network-enabled Samsung TVs",
  "version": "1.0",
  "author": "Denilson SÃ¡",
  "minimum_chrome_version": "42",
  "offline_enabled": false,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "layouts.js",
        "background.js"
      ]
    }
  },
  "sockets": {
    "tcp": {
      "connect": "*:55000"
    }
  },
  "permissions": [
    "alwaysOnTopWindows",
    "contextMenus",
    "storage"
  ]
}
