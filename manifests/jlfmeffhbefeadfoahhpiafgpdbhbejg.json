{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "140-Characters",
  "description": "Limits tweets on the twitter.com desktop site to 140 characters. Because, why would you want #280characters? Ever?",
  "version": "0.2",
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "speak16.png",
    "32": "speak32.png",
    "128": "speak128.png"
  }
}
