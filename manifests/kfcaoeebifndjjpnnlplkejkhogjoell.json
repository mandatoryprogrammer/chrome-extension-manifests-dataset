{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Readable Marxists",
  "version": "0.2",
  "short_name": "Make marxists.org a little nicer",
  "manifest_version": 2,
  "icons": {
    "16": "./img/16.png",
    "48": "./img/48.png",
    "128": "./img/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.marxists.org/*",
        "https://www.marxists.org/*"
      ],
      "css": [
        "readable_marxists.css"
      ]
    }
  ]
}
