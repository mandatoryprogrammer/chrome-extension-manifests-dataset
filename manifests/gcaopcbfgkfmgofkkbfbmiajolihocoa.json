{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "屏蔽商业推广",
  "manifest_version": 2,
  "version": "2.1.1",
  "description": "屏蔽页面上含有的商业推广等广告",
  "homepage_url": "https://github.com/zhangyazhong/baidu-adblock",
  "permissions": [
    "cookies",
    "storage"
  ],
  "browser_action": {
    "default_icon": "sissors(512).png",
    "default_title": "屏蔽商业推广",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "sissors(512).png",
    "48": "sissors(512).png",
    "128": "sissors(512).png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.baidu.com/*",
        "*://baidu.com/*",
        "*://www.tieba.baidu.com/*",
        "*://tieba.baidu.com/*"
      ],
      "js": [
        "jquery.min.js"
      ]
    },
    {
      "matches": [
        "*://www.baidu.com/*",
        "*://baidu.com/*"
      ],
      "js": [
        "baidu-adblock.js"
      ]
    },
    {
      "matches": [
        "*://www.tieba.baidu.com/*",
        "*://tieba.baidu.com/*"
      ],
      "js": [
        "tieba-adblock.js"
      ]
    }
  ]
}
