{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "jquery-2.1.1.min.js",
        "content_script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "description": "Right click on a text area field to wrap the contents at 80 characters.",
  "icons": {
    "128": "images/icon128.png",
    "16": "images/icon16.png",
    "48": "images/icon48.png"
  },
  "manifest_version": 2,
  "name": "Word Wrap",
  "short_name": "Word Wrap",
  "permissions": [
    "contextMenus"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "2.0"
}
