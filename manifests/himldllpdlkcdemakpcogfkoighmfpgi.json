{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Swiss Public Transport Departure",
  "version": "1.4.0",
  "description": "This extension alerts a user when a train, tram or bus departs from a station.",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "browser_action": {
    "default_icon": "images/128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "globals.js",
      "utils.js",
      "thirdparty/jquery-3.2.1.min.js",
      "thirdparty/moment.js",
      "background.js"
    ]
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "images/48.png"
  ]
}
