{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Comment Mode",
  "description": "Read comments while watching YouTube videos",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "icons": {
    "16": "icn_16.png",
    "48": "icn_48.png",
    "128": "icn_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "jquery.js",
        "enable.js",
        "disable.js",
        "analytics.js"
      ],
      "run_at": "document_end"
    }
  ]
}
