{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "boombatower tts",
  "version": "0.1.0",
  "description": "Utilize text-to-speech on selection",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Read selection"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "tts"
  ],
  "manifest_version": 2
}
