{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tiny Copy Link",
  "version": "2.1",
  "description": "Copy URL and title",
  "icons": {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon38.png"
  },
  "background": {
    "scripts": [
      "tiny-background.js",
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "clipboardWrite",
    "tabs"
  ]
}
