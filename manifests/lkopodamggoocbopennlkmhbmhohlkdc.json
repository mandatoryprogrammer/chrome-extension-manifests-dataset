{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "In My Opinion",
  "short_name": "IMO",
  "version": "0.7.7",
  "description": "A Google Chrome extension for removing critic and fan review ratings from search results and various popular webpages.",
  "permissions": [
    "https://www.google.com/*",
    "https://www.imdb.com/*",
    "declarativeContent",
    "storage"
  ],
  "browser_action": {
    "default_title": "In My Opinion",
    "default_popup": "./modal/modal.html",
    "default_icon": {
      "16": "images/imo16.png",
      "32": "images/imo32.png",
      "48": "images/imo48.png",
      "128": "images/imo128.png"
    }
  },
  "icons": {
    "16": "images/imo16.png",
    "32": "images/imo32.png",
    "48": "images/imo48.png",
    "128": "images/imo128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.imdb.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 2
}
