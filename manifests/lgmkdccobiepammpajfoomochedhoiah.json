{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Gittip",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Gittip Button for Github",
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://www.github.com/*"
      ],
      "js": [
        "lib/jquery.min.js",
        "scripts/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "webRequest",
    "tabs",
    "https://github.com/*",
    "https://www.github.com/*",
    "https://www.gittip.com/*"
  ]
}
