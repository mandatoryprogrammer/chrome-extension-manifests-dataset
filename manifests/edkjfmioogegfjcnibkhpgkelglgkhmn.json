{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Steemit - Golos Switcher",
  "description": "Switch from Steemit to Golos and vice versa",
  "version": "1.0",
  "permissions": [
    "https://steemit.com/*",
    "https://golos.io/*",
    "notifications"
  ],
  "background": {
    "matches": [
      "https://steemit.com/*",
      "https://golos.io/*"
    ],
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Steemit - Golos switcher",
    "default_icon": "default.png"
  },
  "manifest_version": 2
}
