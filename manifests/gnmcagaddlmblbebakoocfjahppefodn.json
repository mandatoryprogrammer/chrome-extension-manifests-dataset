{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BetterZermelo",
  "version": "0.4.1",
  "description": "Because zermelo is bugged",
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://coornhert-gymnasium.zportal.nl/*"
      ],
      "js": [
        "main.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://coornhert-gymnasium.zportal.nl/api/v3/oauth/*"
      ],
      "js": [
        "landing.js"
      ],
      "run_at": "document_end"
    }
  ],
  "applications": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/coornhert/BetterZermelo/master/updates.json"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/coornhert/BetterZermelo/master/updates.json"
    }
  }
}
