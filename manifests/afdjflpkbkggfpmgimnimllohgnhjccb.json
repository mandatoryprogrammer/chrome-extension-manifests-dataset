{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "RTM Assistant",
  "version": "0.3",
  "description": "RTM Assistant helps to add quickly the web-page link in RememberTheMilk.",
  "icons": {
    "128": "i.png"
  },
  "browser_action": {
    "default_icon": "i19_.png",
    "default_title": "Add to RTM"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
