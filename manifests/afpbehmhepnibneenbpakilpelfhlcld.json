{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Search URL on Twitter",
  "version": "0.1.3",
  "description": "Search how people mentioning about the page on Twitter",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_title": "Search URL on Twitter",
    "default_icon": {
      "19": "icon_19.png",
      "38": "icon_38.png"
    }
  },
  "permissions": [
    "tabs"
  ],
  "manifest_version": 2
}
