{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Slim Reader",
  "description": "This extension allows the user to make wide pages slimmer, making lines of text shorter and easier to read.",
  "version": "0.1.0",
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Enable Slim Reader"
  },
  "permissions": [
    "activeTab"
  ]
}
