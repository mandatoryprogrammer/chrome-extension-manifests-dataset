{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Wikipolicy",
  "version": "0.6.0",
  "description": "Denying attention-seeking loser murderers their undeserved fame.",
  "author": "Wikipolicy & Heather Akers-Healy",
  "browser_action": {
    "default_title": "Use this to open the popup",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "wikipol48.png",
    "128": "wikipol128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "replace.js"
      ],
      "run_at": "document_end"
    }
  ]
}
