{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "vk_comments_chain",
  "version": "1.2.0",
  "icons": {
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "js/bg.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.vk.com/*"
      ],
      "css": [
        "css/main.css"
      ],
      "js": [
        "js/cont.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "/js/inject.js",
    "/img/planet.gif"
  ],
  "externally_connectable": {
    "ids": [
      "*"
    ],
    "matches": [
      "*://*.vk.com/*"
    ]
  }
}
