{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SurfLog",
  "description": "Extension for a better browser history",
  "version": "1.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/bg.entry.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.news.ycombinator.com/*",
        "*://*.twitter.com/*",
        "*://*.youtube.com/*",
        "*://*.github.com/*",
        "*://*.stackoverflow.com/*",
        "*://*.reddit.com/*"
      ],
      "js": [
        "js/content.entry.js"
      ],
      "run_at": "document_end"
    }
  ]
}
