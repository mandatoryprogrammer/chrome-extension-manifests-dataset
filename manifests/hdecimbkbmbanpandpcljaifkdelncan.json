{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "count(text)",
  "description": "Shows word and characters count on Evernote Web, and shows advanced text info on any selected text (context menu).",
  "version": "1.0.1",
  "permissions": [
    "contextMenus",
    "notifications",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "calculateStats.js",
      "bg.js"
    ]
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "offline_enabled": true,
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "https://www.evernote.com/Home.action*"
      ],
      "js": [
        "calculateStats.js",
        "ew.js"
      ],
      "css": [
        "ew.css"
      ]
    }
  ]
}
