{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "1.0",
  "name": "ShareByMail",
  "description": "Share links, images or pages by right-clicking.",
  "permissions": [
    "tabs",
    "*://*/*",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "share.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icon/icon16.png",
    "24": "icon/icon24.png",
    "32": "icon/icon32.png",
    "64": "icon/icon64.png"
  },
  "options_page": "options.html"
}
