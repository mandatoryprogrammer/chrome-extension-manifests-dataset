{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mobbr online payments",
  "short_name": "Mobbr payments for online collaboration",
  "version": "0.9",
  "author": "Mobbr",
  "description": "Donate, pay or fund any URL, we make sure everybody gets their fair share.",
  "homepage_url": "https://mobbr.com",
  "icons": {
    "64": "icons/icon.png",
    "16": "icons/mobbr16.png",
    "128": "icons/mobbrball128.png"
  },
  "background": {
    "scripts": [
      "lib/lru.js",
      "lib/nanoajax.min.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "lib/mobbr-button.js",
        "mobbr_content_script.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/mobbr16.png"
  },
  "manifest_version": 2,
  "content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self'; connect-src *"
}
