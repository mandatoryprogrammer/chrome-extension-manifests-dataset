{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Курсы валют НБ РК",
  "version": "1.5",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "description": "Показывает курсы валют с официального сайта НБ РК",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "http://www.nationalbank.kz/*"
  ],
  "icons": {
    "48": "images/rates-48.png",
    "128": "images/rates-128.png"
  },
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Курсы валют НБ РК",
    "default_icon": "images/rates-48.png",
    "default_popup": "popup.html"
  }
}
