{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mouse Pointer Highlighter",
  "description": "This extension will highlight your mouse cursor and your mouse clicks.",
  "version": "1.0.3",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "jquery/jquery-3.1.0.min.js",
      "highlight.js",
      "onOffToggle.js"
    ]
  },
  "browser_action": {
    "default_icon": "off.png"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery/jquery-3.1.0.min.js",
        "highlight.js"
      ],
      "all_frames": true
    }
  ],
  "offline_enabled": true
}
