{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Siderite's Facebook Filter",
  "description": "Focus on stories with content versus shares and likes on the Facebook page",
  "version": "0.7.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.facebook.com/*",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon_disabled.png"
  },
  "content_scripts": [
    {
      "css": [
        "statusProcessor.css"
      ],
      "js": [
        "jquery-2.2.2.min.js",
        "fbFilter.js"
      ],
      "matches": [
        "*://*.facebook.com/",
        "*://*.facebook.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
