{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Punkjs Bridge",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "Punkjs Bridge is a Chrome app that facilitates loading of Javascript from ~/.js for its companion extension.",
  "author": "Jonathan Cremin <jonathan@crem.in>",
  "minimum_chrome_version": "46",
  "icons": {
    "128": "icon-padded-128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "index.js"
      ]
    }
  },
  "permissions": [
    {
      "fileSystem": [
        "retainEntries",
        "directory"
      ]
    },
    "storage"
  ],
  "file_handlers": {
    "text": {
      "types": [
        "text/*"
      ]
    }
  }
}
