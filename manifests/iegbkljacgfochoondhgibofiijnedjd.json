{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pivotal Tracker Story Board",
  "version": "3.0.0",
  "manifest_version": 2,
  "description": "Keep an eye on the current iteration!",
  "icons": {
    "32": "images/board32.png",
    "48": "images/board48.png",
    "128": "images/board128.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "images/board32.png",
    "default_title": "Pivotal Tracker Story Board",
    "default_popup": "selectProject.html"
  },
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "tabs",
    "https://www.pivotaltracker.com/*",
    "http://www.pivotaltracker.com/*"
  ]
}
