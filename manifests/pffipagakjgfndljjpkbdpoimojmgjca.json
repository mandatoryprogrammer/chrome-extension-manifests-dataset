{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "No BBB",
  "version": "4.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "back.js"
    ]
  },
  "description": "Quer bloquear textos que postam relacionados ao Big Brother? O addon NoBBB bloqueia e permite que voce veja se quiser!",
  "permissions": [
    "https://facebook.com/*",
    "http://facebook.com/*",
    "http://twitter.com/*",
    "https://twitter.com/*",
    "http://uol.com.br/*",
    "http://terra.com.br/*",
    "http://globo.com/*",
    "http://ig.com.br/*",
    "http://r7.com.br/*",
    "http://br.msn.com/*",
    "http://br.yahoo.com/*",
    "tabs"
  ],
  "icons": {
    "16": "resources/logo19.png",
    "48": "resources/logo48.png",
    "128": "resources/logo128.png"
  },
  "browser_action": {
    "default_icon": "resources/logo19.png",
    "default_title": "NoBBB",
    "default_popup": "nobbb.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.facebook.com/*",
        "https://www.facebook.com/*",
        "http://twitter.com/*",
        "https://twitter.com/*",
        "http://*.uol.com.br/*",
        "http://www.terra.com.br/*",
        "http://www.globo.com/*",
        "http://www.ig.com.br/*",
        "http://www.r7.com/*",
        "http://*.msn.com/*",
        "https://br.yahoo.com/*"
      ],
      "js": [
        "index.js",
        "jquery-2.1.3.min.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "resources/logo19.png"
  ]
}
