{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tab Rearranging",
  "version": "1.0",
  "description": "Allows you to rearrange tabs using keyboard shortcuts.",
  "icons": {
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  "background": {
    "scripts": [
      "tab-rearrange.js"
    ],
    "persistent": false
  },
  "commands": {
    "move-tab-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+PageUp",
        "mac": "MacCtrl+Shift+PageUp"
      },
      "description": "Moves the current tab left."
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+PageDown",
        "mac": "MacCtrl+Shift+PageDown"
      },
      "description": "Moves the current tab right."
    }
  }
}
