{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Citation Killa",
  "short_name": "CiteKilla",
  "description": "Removes bracketed citations from text (i.e. from Wikipedia)",
  "version": "1.1",
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "contextMenus",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ]
}
