{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Summarizer",
  "version": "1.1.3",
  "description": "Summarizes selected text and says out the summary loudly",
  "icons": {
    "16": "images/sum18.png",
    "24": "images/sum24.png",
    "48": "images/sum48.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/sum18.png",
    "default_title": "Summarize Text"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "contextMenus",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "tts"
  ],
  "background": {
    "default_icon": "icon.png",
    "scripts": [
      "js/lodash.js",
      "js/tokenizer.js",
      "js/jquery-3.2.1.slim.min.js",
      "js/eventPage.js",
      "js/js-summarize.js"
    ],
    "persistent": true
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ]
}
