{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Ethical Shopping Helper",
  "description": "Helps you make ethical shopping decisions on the Sainsburys/Tesco/Ocado/.. websites based on data from Ethical Consumer Score Tables",
  "version": "0.9",
  "browser_action": {
    "default_icon": {
      "32": "images/icon32.png"
    },
    "default_popup": "popup.html",
    "default_title": "Ethical Shopping Helper"
  },
  "background": {
    "scripts": [
      "matchymcmatchypants.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.sainsburys.co.uk/*"
      ],
      "js": [
        "matchymcmatchypants.js",
        "common.js",
        "sainsburys.js"
      ],
      "css": [
        "css/ethics.css"
      ]
    },
    {
      "matches": [
        "https://www.ocado.com/*"
      ],
      "js": [
        "matchymcmatchypants.js",
        "common.js",
        "ocado.js"
      ],
      "css": [
        "css/ethics.css"
      ]
    },
    {
      "matches": [
        "https://www.tesco.com/groceries/*"
      ],
      "js": [
        "matchymcmatchypants.js",
        "common.js",
        "tesco.js"
      ],
      "css": [
        "css/ethics.css"
      ]
    },
    {
      "matches": [
        "https://groceries.asda.com/*"
      ],
      "js": [
        "matchymcmatchypants.js",
        "common.js",
        "asda.js"
      ],
      "css": [
        "css/ethics.css"
      ]
    },
    {
      "matches": [
        "https://www.boots.com/*"
      ],
      "js": [
        "matchymcmatchypants.js",
        "common.js",
        "boots.js"
      ],
      "css": [
        "css/ethics.css"
      ]
    },
    {
      "matches": [
        "https://www.milkandmore.co.uk/*"
      ],
      "js": [
        "matchymcmatchypants.js",
        "common.js",
        "milkandmore.js"
      ],
      "css": [
        "css/ethics.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/icon32.png"
  ],
  "permissions": [
    "https://www.ethicalconsumer.org/*"
  ]
}
