{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Granblue Tweetdeck Copier",
  "description": "Copies clicked granblue tweet id",
  "version": "1.3",
  "icons": {
    "16": "copy-icon.png",
    "48": "copy-icon.png",
    "128": "copy-icon.png"
  },
  "browser_action": {
    "default_icon": "copy-icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://tweetdeck.twitter.com/*"
      ],
      "js": [
        "click_hook.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "https://tweetdeck.twitter.com/",
    "clipboardRead",
    "clipboardWrite",
    "notifications"
  ]
}
