{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Alt-righteous",
  "version": "1.0",
  "manifest_version": 2,
  "author": "David Rudin",
  "description": "Strike white nationalists' nickname of choice from the news you consume.",
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "alt-righteous",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "http://*/*",
    "https://*/*"
  ]
}
