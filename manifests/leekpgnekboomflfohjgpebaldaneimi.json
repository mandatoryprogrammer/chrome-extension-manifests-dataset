{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ultraviolet",
  "short_name": "Ultraviolet",
  "version": "1.0",
  "description": "An intuitively light-weight and simple to use steganography app to hide and reveal secret messages within images.",
  "manifest_version": 2,
  "permissions": [
    "fileSystem",
    {
      "fileSystem": [
        "write"
      ]
    },
    "storage",
    "app.window"
  ],
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistant": false
    }
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
