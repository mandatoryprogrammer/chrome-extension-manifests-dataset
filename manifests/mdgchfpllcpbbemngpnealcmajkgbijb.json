{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Macify",
  "version": "0.0.3.1",
  "description": "Make your Chromebook™ behave more like a Mac®",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "chrome/tab_manager.js",
      "chrome/main.js"
    ]
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*/*"
      ],
      "js": [
        "chrome/host_api.js",
        "common/key_code.js",
        "common/tab_switcher.js",
        "common/main.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ]
}
