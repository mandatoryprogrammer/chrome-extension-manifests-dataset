{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "qiita-alert",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Qiitaの投稿日時を表示し、古い投稿を識別しやすくする拡張です。",
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://qiita.com/*/items/*"
      ],
      "js": [
        "js/script.js",
        "js/lib/moment-with-locales.min.js"
      ],
      "css": [
        "css/style.css"
      ],
      "run_at": "document_start"
    }
  ]
}
