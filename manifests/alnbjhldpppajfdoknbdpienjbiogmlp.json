{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FairCoin Calculator",
  "version": "1.2",
  "permissions": [
    "webRequest",
    "<all_urls>",
    "*://api.fairplayground.info/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chain.fair.to/address*",
        "https://chain.fair-coin.org/address/*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "extension.js"
      ]
    }
  ],
  "gecko": {
    "id": "faircoin-calculator@mayel.space"
  }
}
