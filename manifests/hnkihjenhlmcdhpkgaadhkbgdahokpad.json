{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Blissful Silence",
  "version": "0.0.3",
  "description": "Remove all traces of comments/shares/+1s/likes from certain sites.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "css": [
        "sites/yt.css"
      ]
    },
    {
      "matches": [
        "http://www.rockpapershotgun.com/*"
      ],
      "css": [
        "sites/rps.css"
      ]
    },
    {
      "matches": [
        "http://*.deviantart.com/*"
      ],
      "css": [
        "sites/da.css"
      ]
    },
    {
      "matches": [
        "http://www.npr.org/*"
      ],
      "css": [
        "sites/npr.css"
      ]
    },
    {
      "matches": [
        "http://thedailyshow.cc.com/*"
      ],
      "css": [
        "sites/dailyshow.css"
      ]
    },
    {
      "matches": [
        "http://www.reddit.com/*"
      ],
      "css": [
        "sites/reddit.css"
      ]
    },
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "css": [
        "sites/fb.css"
      ]
    },
    {
      "matches": [
        "https://plus.google.com/*"
      ],
      "css": [
        "sites/gp.css"
      ]
    },
    {
      "matches": [
        "http://www.vice.com/*"
      ],
      "css": [
        "sites/vice.css"
      ]
    }
  ]
}
