{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Netflix Ultra Widescreen",
  "description": "True fullscreen for 21:10 Netflix videos on ultra-widescreen LG 34UM95.",
  "version": "3.0.0",
  "minimum_chrome_version": "40",
  "permissions": [
    "declarativeContent",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "js/widescreen.js"
    ],
    "persistent": false
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Alt+W"
      }
    }
  },
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },
  "page_action": {
    "default_title": "Enable Widescreen",
    "default_icon": {
      "19": "img/icon_off_19.png"
    }
  },
  "icons": {
    "19": "img/icon_off_19.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "manifest_version": 2
}
