{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Track Me Not",
  "version": "0.3.2",
  "description": "See who's tracking your emails and block them from doing so.",
  "icons": {
    "128": "assets/logo-128x128.png"
  },
  "author": "Aman Kumar Jain",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "all_frames": true,
      "matches": [
        "*://mail.google.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
