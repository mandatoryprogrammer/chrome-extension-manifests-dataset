{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Yet Another REST Client",
  "version": "1.1.2",
  "description": "A free and easy-to-use REST Client. Use it to develop, test and debug RESTful APIs.",
  "short_name": "YARC",
  "author": "Paul Hitz",
  "icons": {
    "16": "img/logo_16x16.png",
    "48": "img/logo_48x48.png",
    "128": "img/logo_128x128.png"
  },
  "background": {
    "scripts": [
      "extension/background.js"
    ]
  },
  "incognito": "split",
  "permissions": [
    "<all_urls>",
    "clipboardWrite",
    "cookies",
    "storage",
    "unlimitedStorage"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "browser_action": {
    "default_icon": {
      "19": "img/logo_19x19.png",
      "38": "img/logo_38x38.png"
    }
  }
}
