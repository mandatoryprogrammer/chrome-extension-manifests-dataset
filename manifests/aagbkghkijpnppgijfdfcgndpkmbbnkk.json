{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Golden",
  "version": "1",
  "manifest_version": 2,
  "description": "改善香港高登 hkgolden.com 的瀏覽體驗，包括精簡版面和其他貼心功能。",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.hkgolden.com/*"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "js": [
        "js/sizzle-1.8.2.js",
        "js/moment-1.7.2.min.js",
        "js/moment-lang-zh-tw.js",
        "ellab-utils-6.js",
        "golden.user.js"
      ],
      "css": [
        "golden.css"
      ]
    }
  ],
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://use.edgefonts.net/; object-src 'self'",
  "permissions": [
    "storage",
    "tabs",
    "http://use.edgefonts.net/league-gothic.js"
  ],
  "web_accessible_resources": [
    "images/clock.png",
    "images/golden-favicon.png",
    "images/golden-favicon-blank.png",
    "images/new-message.png",
    "images/new-message-blank.png"
  ]
}
