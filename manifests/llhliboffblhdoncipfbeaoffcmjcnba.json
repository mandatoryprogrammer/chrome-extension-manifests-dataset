{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Smile Hunt",
  "description": "Donate through Amazon Smile everytime you purchase a book through Product Hunt.",
  "version": "1.0",
  "permissions": [
    "http://www.producthunt.com/*",
    "http://www.amazon.com/*",
    "https://www.amazon.com/*",
    "http://amzn.to/*",
    "http://www.96problems.com/smile-hunt/*",
    "tabs"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.producthunt.com/books/*"
      ],
      "js": [
        "js/jquery-2.1.4.min.js",
        "js/run.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://www.96problems.com/smile-hunt"
      ],
      "js": [
        "js/installCheck.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "img/smile.png"
  ],
  "manifest_version": 2
}
