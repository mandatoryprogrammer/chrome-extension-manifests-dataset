{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "OTools",
  "version": "0.2.1",
  "description": "An extension to improve the workflow of development",
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "https://localhost/",
    "http://localhost/"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/opera_tools16.png",
      "32": "images/opera_tools32.png",
      "48": "images/opera_tools48.png",
      "128": "images/opera_tools128.png"
    }
  },
  "icons": {
    "16": "images/opera_tools16.png",
    "32": "images/opera_tools32.png",
    "48": "images/opera_tools48.png",
    "128": "images/opera_tools128.png"
  },
  "manifest_version": 2
}
