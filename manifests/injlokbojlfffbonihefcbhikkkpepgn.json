{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Derpi-Notify",
  "version": "1.2.8",
  "description": "Keep track of your Derpibooru notifications and messages in (almost) real time",
  "applications": {
    "gecko": {
      "strict_min_version": "54.0"
    }
  },
  "permissions": [
    "https://derpibooru.org/",
    "storage",
    "notifications"
  ],
  "optional_permissions": [
    "https://www.derpibooru.org/",
    "https://trixiebooru.org/"
  ],
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/notif-16.png",
      "32": "img/notif-32.png",
      "48": "img/notif-48.png",
      "128": "img/notif-128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://derpibooru.org/*",
        "https://www.derpibooru.org/*",
        "https://trixiebooru.org/*"
      ],
      "js": [
        "js/derpi-notify.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "img/app-16.png",
    "32": "img/app-32.png",
    "48": "img/app-48.png",
    "128": "img/app-128.png"
  },
  "manifest_version": 2
}
