{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ONE Checkbox",
  "version": "0.0.0.3",
  "description": "Add checkboxes to ONE homework notebooks.",
  "icons": {
    "16": "images/onecheckbox_16.png",
    "32": "images/onecheckbox_32.png",
    "64": "images/onecheckbox_64.png",
    "128": "images/onecheckbox_128.png"
  },
  "author": "Yves-Eric Martin",
  "background": {
    "scripts": [
      "storage.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://oneconnect.opendigitaleducation.com/homeworks"
      ],
      "js": [
        "styles.js",
        "inject.js",
        "content.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://oneconnect.opendigitaleducation.com/homeworks"
    ]
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "web_accessible_resources": [
    "content.css"
  ]
}
