{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Reddit Opener",
  "description": "Click a link on reddit to open the link in one background tab, and the comments in another",
  "version": "1.1",
  "author": "Ari Vaniderstine",
  "icons": {
    "48": "48.png",
    "128": "128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.reddit.com/*"
      ],
      "js": [
        "jquery.js",
        "opener.js"
      ],
      "run_at": "document_end"
    }
  ]
}
