{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "OneVideo",
  "description": "To be able to eliminate the invasive advertising of some video pages like rapidvideo, openload, streamago, etc",
  "version": "3.01",
  "author": "Jose Luis Coyotzi Ipatzi",
  "icons": {
    "128": "images/default_icon.png"
  },
  "background": {
    "scripts": [
      "js/ChromeEvents.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "css/video-js.5.8.3.css",
        "css/fb-skin.css",
        "css/videojs-resolution-switcher.css"
      ],
      "js": [
        "js/ChromeJquery.js",
        "js/video.5.8.3.js",
        "js/videojs-resolution-switcher.js",
        "js/unPacker.js"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "cookies",
    "tabs",
    "http://*/",
    "https://*/",
    "unlimitedStorage",
    "webRequest",
    "activeTab"
  ],
  "browser_action": {
    "default_title": "OneVideo",
    "default_icon": "images/default_icon.png"
  }
}
