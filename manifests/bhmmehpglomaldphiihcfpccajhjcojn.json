{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BetterMint",
  "description": "Surface improvements to Mint.com",
  "version": "1.3.2",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*.mint.com/*",
        "https://*.mint.com/*",
        "http://mint.intuit.com/*",
        "https://mint.intuit.com/*"
      ],
      "css": [
        "styles.css",
        "alerts/dismissal.css"
      ],
      "js": [
        "common.js",
        "main.js",
        "overview/budgetbars.js",
        "planning/budgetbars.js",
        "planning/autosplit.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
