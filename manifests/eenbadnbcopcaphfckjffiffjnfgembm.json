{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CopyHacker",
  "version": "1.2",
  "description": "GitHub: https://github.com/leconio/hackcopytail",
  "icons": {
    "128": "128icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "src/copy_hacker.js"
      ]
    },
    {
      "matches": [
        "*://blog.csdn.net/*"
      ],
      "all_frames": true,
      "js": [
        "src/click_hacker.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "options_page": "src/manager.html"
}
