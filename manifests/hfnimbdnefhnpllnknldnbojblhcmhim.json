{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Github Wiki Categorizer",
  "description": "This feature allows the user to add pseudo-categories linked with Github's wiki right into Github's wiki page footer.",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "page_action": {
    "default_icon": "img/icon-19.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/wiki",
        "https://github.com/*/wiki/*"
      ],
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/content_script.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "img/icon-16.png",
    "19": "img/icon-19.png",
    "38": "img/icon-19@2x.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "manifest_version": 2
}
