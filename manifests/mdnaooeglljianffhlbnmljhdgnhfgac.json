{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Code Comments",
  "description": "This extension will support you write comment directly on github files.",
  "version": "0.0.7",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "vendors/github.css"
      ],
      "js": [
        "vendors/firebase.js",
        "vendors/jquery-1.12.3.min.js",
        "vendors/index.js",
        "vendors/github.js",
        "index.js"
      ]
    }
  ]
}
