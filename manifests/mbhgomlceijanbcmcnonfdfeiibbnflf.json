{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ruler",
  "description": "Position a ruler on the webpage to measure elements in pixels",
  "version": "0.0.0.4",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icon.png",
      "38": "icon.png"
    },
    "default_title": "Ruler",
    "name": "Chrome Ruler"
  },
  "content_scripts": [
    {
      "js": [
        "jquery.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
