{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Muriel Grid",
  "description": "A responsive grid overlay, based on the Muriel Design System.",
  "version": "0.3",
  "author": "Jeff Ong",
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "src/popup.html"
  },
  "web_accessible_resources": [
    "src/css/grid.css",
    "src/css/popup.css"
  ],
  "permissions": [
    "activeTab"
  ]
}
