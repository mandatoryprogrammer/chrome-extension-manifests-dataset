{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hit Count",
  "description": "Count how many pages you ever visited.",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "hc.js",
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "background",
    "tabs"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon19.png",
    "default_popup": "popup.html"
  }
}
