{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Now Now",
  "description": "Use Now without the annoying guide on the side so you can resize the player easily",
  "version": "0.0.1",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "content_scripts": [
    {
      "css": [
        "css/nownow.css"
      ],
      "matches": [
        "*://now.foxtel.com.au/app/*"
      ]
    }
  ],
  "permissions": [
    "https://now.foxtel.com.au/"
  ]
}
