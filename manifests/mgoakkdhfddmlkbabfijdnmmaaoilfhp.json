{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Fog",
  "manifest_version": 2,
  "version": "0.5.0",
  "description": "Hides friend and follower counts on social media",
  "icons": {
    "32": "icon_32.png",
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.facebook.com/*",
        "https://*.facebook.com/*"
      ],
      "css": [
        "facebook_hide.css"
      ]
    },
    {
      "matches": [
        "http://*.twitter.com/*",
        "https://*.twitter.com/*"
      ],
      "js": [
        "twitter.js"
      ],
      "css": [
        "twitter_hide.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "http://*.facebook.com/*",
    "https://*.facebook.com/*",
    "http://*.twitter.com/*",
    "https://*.twitter.com/*"
  ]
}
