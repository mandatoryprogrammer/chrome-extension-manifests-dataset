{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Click-to-hide",
  "description": "Hide elements on page by clicking on them.",
  "version": "1.0.1",
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Click-to-hide"
  },
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 2
}
