{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "YouTube Comment Remover",
  "description": "A very simple extension to hide all YouTube comments.",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "jquery-2.1.3.min.js",
        "main.js"
      ]
    }
  ]
}
