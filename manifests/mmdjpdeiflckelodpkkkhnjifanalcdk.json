{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SteamHour",
  "description": "Monitor hours spent on steam games",
  "version": "1.1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "http://api.steampowered.com/*",
    "http://steamcommunity.com/*",
    "storage",
    "alarms"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
