{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Offchain Krycha",
  "version": "0.3",
  "description": "This browser add-on adds TTS chat reader and dark theme.",
  "icons": {
    "128": "img/icon_128.png",
    "48": "img/icon_48.png",
    "16": "img/icon_16.png"
  },
  "browser_action": {
    "default_icon": "img/icon_16.png",
    "default_popup": "html/popup.html",
    "default_title": "Offchain Krycha"
  },
  "options_page": "html/optionsPage.html",
  "background": {
    "scripts": [
      "js/background_script.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "img/speaker_icon.png",
    "img/speaker_icon_gray.png",
    "img/DLive_white_Logo.png",
    "css/darkTheme.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.dlive.io/*"
      ],
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/jquery-observe.js",
        "js/artyom.window.min.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "*://dlive.io/*",
    "webNavigation"
  ]
}
