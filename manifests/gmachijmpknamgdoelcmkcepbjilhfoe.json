{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Text Narrator",
  "description": "This extension narrates text on the page.",
  "version": "1.0",
  "background": {
    "scripts": [
      "narrate.js",
      "background.js"
    ]
  },
  "icons": {
    "16": "img/speak16.png",
    "48": "img/speak48.png",
    "128": "img/speak.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "tts",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_icon": "img/speak.png",
    "default_popup": "popup.html"
  }
}
