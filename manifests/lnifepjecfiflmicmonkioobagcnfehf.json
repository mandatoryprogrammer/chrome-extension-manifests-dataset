{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Stops ECCC from downloading PDFs when they can be opened in the browser. Also fixes a bug during submission.",
  "manifest_version": 2,
  "name": "ECCC Fixes",
  "version": "2.0",
  "page_action": {
    "default_icon": {
      "48": "icons/48.png",
      "96": "icons/96.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://eccc.weizmann.ac.il/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://eccc.weizmann.ac.il/submit/paper/"
      ],
      "js": [
        "submissioninjection.js"
      ]
    }
  ]
}
