{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Memer",
  "short_name": "Memer",
  "author": "Rick Beyer",
  "homepage_url": "https://github.com/fcbeyer/memer-chrome",
  "manifest_version": 2,
  "version": "1.0.16",
  "description": "replace lazy comments in threads with the meme image referenced",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_title": "Memer",
    "default_icon": "lib/images/icons/jaws16.png"
  },
  "icons": {
    "16": "lib/images/icons/jaws16.png",
    "48": "lib/images/icons/jaws48.png",
    "128": "lib/images/icons/jaws128.png"
  },
  "content_scripts": [
    {
      "js": [
        "lib/javascript/jquery.min.js",
        "lib/javascript/jquery.ba-replacetext.min.js",
        "lib/javascript/memer.js"
      ],
      "css": [
        "lib/stylesheets/memer.css"
      ],
      "matches": [
        "http://*.fark.com/*",
        "http://reddit.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "lib/images/memes/*.jpg",
    "lib/images/memes/*.gif"
  ]
}
