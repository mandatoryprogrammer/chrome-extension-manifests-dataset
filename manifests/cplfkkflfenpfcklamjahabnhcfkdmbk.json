{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "shuffle for plex",
  "description": "adds random sorting to your plex media library",
  "version": "1.2",
  "author": "dev@conceptualspace.net",
  "permissions": [
    "*://app.plex.tv/*",
    "*://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://app.plex.tv/*",
        "*://localhost/*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "arrive.min.js",
        "content_script.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
