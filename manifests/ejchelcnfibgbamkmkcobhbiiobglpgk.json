{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "copy_anchor_text",
  "version": "0.1.0",
  "description": "Adds an item to the context menu for copying a link anchor text or the value of title/alt attributes for an image.",
  "icons": {
    "128": "icons/128.png"
  },
  "permissions": [
    "contextMenus",
    "clipboardWrite"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "event_page.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ]
}
