{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "将棋ウォーズ棋譜コピー",
  "description": "将棋ウォーズの棋譜をCSA形式でクリップボードにコピーする拡張です",
  "version": "0.0.0.1",
  "content_scripts": [
    {
      "matches": [
        "https://kif-pona.heroz.jp/games/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "clipboardRead"
  ]
}
