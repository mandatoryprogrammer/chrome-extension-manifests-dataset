{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Qiita Ciel Tools",
  "description": "Patch some of Qiita website",
  "version": "0.0.1.2",
  "manifest_version": 2,
  "homepage_url": "https://github.com/cielavenir/ctouch/",
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "options_page": "option.html",
  "content_scripts": [
    {
      "js": [
        "qiita_source.user.js"
      ],
      "matches": [
        "http://qiita.com/*/items/*",
        "http://qiita.com/*/private/*"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "qiita_toppage_search.user.js"
      ],
      "matches": [
        "https://qiita.com/"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "qiita_userpage_search.user.js"
      ],
      "matches": [
        "http://qiita.com/*/items"
      ],
      "run_at": "document_end"
    }
  ]
}
