{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Reddit+",
  "version": "1.4",
  "manifest_version": 2,
  "description": "Reddit+",
  "background": {
    "persistent": false,
    "scripts": [
      "bg.js"
    ]
  },
  "permissions": [
    "*://*.reddit.com/*",
    "*://*.imgur.com/*",
    "*://play.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.reddit.com/*"
      ],
      "js": [
        "data/zepto.min.js",
        "chrome.js",
        "data/marked.js",
        "data/redditplus.js",
        "data/magpopup.js"
      ],
      "css": [
        "data/redditplus.css",
        "data/magpopup.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "data/button.png",
    "data/button-close.png",
    "data/loading.gif"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
