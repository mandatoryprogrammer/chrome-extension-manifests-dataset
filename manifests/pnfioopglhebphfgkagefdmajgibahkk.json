{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Trello plugin all-in-one",
  "short_name": "Truello",
  "version": "1.2.1",
  "description": "Tired of having too many extensions for Trello? Add missing features in ONE Chrome extension: Card age, number, count and lable name",
  "author": "Derrick Qin",
  "permissions": [
    "tabs",
    "https://trello.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "thirdPartyLib/moment.js",
        "truello.js"
      ],
      "matches": [
        "https://trello.com/*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
