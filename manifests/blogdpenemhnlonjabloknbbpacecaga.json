{
  "name": "check163mail",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "检查网易邮箱未阅读邮件数目",
  "icons": {
    "16": "icon_16x16.png",
    "32": "icon_32x32.png",
    "48": "icon_48x48.png",
    "128": "icon_128x128.png"
  },
  "background": {
    "page": "html/background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://mail.163.com/"
      ],
      "js": [
        "js/check.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon_19x19.png",
    "default_title": "网易邮件未读数目",
    "default_popup": "html/menu.html"
  },
  "web_accessible_resources": [
    "img/hd-bg.png",
    "img/close.png",
    "img/bt-bg-other.png",
    "img/bt-bg-main.png",
    "img/ddl-bg.png",
    "img/ddl-icon.png"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "permissions": [
    "unlimitedStorage",
    "background",
    "*://*.163.com/*",
    "*://*.126.com/*",
    "*://*.yeah.net/*"
  ]
}
