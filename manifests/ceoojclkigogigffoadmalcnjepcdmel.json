{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "이 시국에?",
  "version": "0.0.1",
  "description": "일본 외래어를 표시해주고 순우리말로 보여줍니다.",
  "icons": {
    "128": "images/icon1.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "browser_action": {
    "default_icon": "images/icon1.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content-action.js"
      ],
      "run_at": "document_idle",
      "matches": [
        "<all_urls>",
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ]
    }
  ],
  "manifest_version": 2
}
