{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "噗浪偷偷說隱藏器",
  "version": "0.1.2",
  "manifest_version": 2,
  "description": "隱藏並消音所有噗浪偷偷說。",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    "./strapdown/strapdown.js"
  ],
  "options_page": "options.html",
  "permissions": [
    "*://*.plurk.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-2.1.0.min.js",
        "content_script.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
