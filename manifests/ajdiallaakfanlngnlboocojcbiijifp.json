{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Don't Flash Tabs!",
  "version": "1.0",
  "description": "Prevent Facebook and Messenger from flashing their tab titles",
  "permissions": [
    "tabs",
    "activeTab",
    "https://www.messenger.com/*",
    "https://www.facebook.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
