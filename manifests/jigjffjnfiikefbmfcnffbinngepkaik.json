{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SpeedReader",
  "description": "The easiest way to learn to speed read",
  "version": "2.0",
  "browser_action": {
    "default_icon": "SR.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "app.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
