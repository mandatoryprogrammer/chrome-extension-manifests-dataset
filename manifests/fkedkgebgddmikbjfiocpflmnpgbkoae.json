{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Trela",
  "description": "A tribute to the people who died waiting for the webpage to load.",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "page_action": {
    "default_icon": "icon48.png",
    "default_title": "Trela"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "helpers.js",
        "local_storage.js",
        "contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}
