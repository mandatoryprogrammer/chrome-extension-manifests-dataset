{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Better IFTTT UI",
  "version": "1.7.1",
  "description": "Makes the IFTTT UI more usable on desktop",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "https://*.ifttt.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ifttt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "css/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
