{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GithubNewsMonitor",
  "version": "1.1",
  "description": "GitHubのNewsを監視",
  "icons": {
    "48": "icons/icon_048.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "https://github.com/"
  ],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Popup",
    "default_popup": "popup.html"
  }
}
