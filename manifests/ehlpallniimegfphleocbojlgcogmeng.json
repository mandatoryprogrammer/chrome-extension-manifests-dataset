{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Add links to BaseCamp's TODOs",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Adds comment links to each TODO listed in the /todo_lists page.",
  "icons": {
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.basecamphq.com/todo_lists"
      ],
      "js": [
        "jquery.js",
        "content_script.js"
      ]
    }
  ]
}
