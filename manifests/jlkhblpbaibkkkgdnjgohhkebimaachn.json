{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Black Tweet",
  "version": "1.0",
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "js": [
        "jquery.js",
        "hide_tweets.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Скрыть твиты по ключевым словам"
  },
  "manifest_version": 2
}
