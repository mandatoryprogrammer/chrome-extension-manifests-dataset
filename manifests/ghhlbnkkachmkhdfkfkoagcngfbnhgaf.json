{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "minimum_chrome_version": "23",
  "manifest_version": 2,
  "name": "Pinboard",
  "version": "0.0.12",
  "description": "Google Chrome Extention for Pinboard (http://pinboard.in).",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Pinboard",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "images/pinboard_icon_19.png",
      "38": "images/pinboard_icon_38.png"
    }
  },
  "content_scripts": [
    {
      "js": [
        "javascripts/content_script.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "javascripts/pinboard.js",
      "javascripts/context_menus.js",
      "javascripts/chrome/event_listener.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/pinboard_icon_16.png",
    "48": "images/pinboard_icon_48.png",
    "128": "images/pinboard_icon_128.png"
  },
  "commands": {
    "save_to_pinboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Save to Pinboard"
    },
    "read_later": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      },
      "description": "Read later"
    },
    "unread_bookmarks": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "MacCtrl+Shift+U"
      },
      "description": "Unread bookmarks"
    },
    "all_bookmarks": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "All bookmarks"
    }
  }
}
