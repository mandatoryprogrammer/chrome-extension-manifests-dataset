{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Reply Now",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Change Gmail timestamps to display relative times.",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/mail/*"
      ],
      "js": [
        "lib/jquery.min.js",
        "lib/moment.min.js",
        "scripts/timestamp.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "https://mail.google.com/mail/*"
  ]
}
