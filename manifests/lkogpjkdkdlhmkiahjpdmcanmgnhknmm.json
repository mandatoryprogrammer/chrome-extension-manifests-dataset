{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Checkargos.com Helper",
  "description": "Detects any links to Argos.ie and replaces them with a link to Checkargos.com.",
  "version": "0.1",
  "manifest_version": 2,
  "icons": {
    "128": "Logo128.png"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "checkForLinks.js"
      ]
    }
  ]
}
