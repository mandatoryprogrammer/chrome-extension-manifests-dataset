{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hacker News Comment Highlighter",
  "description": "Highlights unread comments in Hacker News threads",
  "version": "1.0.1",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/item?*"
      ],
      "js": [
        "highlighter.js"
      ],
      "css": [
        "highlighter.css"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
