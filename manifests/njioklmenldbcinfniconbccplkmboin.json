{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Trumpster",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Read what you believe!",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_icon": "icons/trumpSpeak-icon-128.png",
    "default_title": "start TrumpSpeak!"
  },
  "icons": {
    "16": "/icons/trump-clear-16.png",
    "48": "icons/trump-clear-ts-48.png",
    "128": "/icons/trumpSpeak-icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js",
      "scripts/find.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "/options/options.html",
    "chrome_style": true
  }
}
