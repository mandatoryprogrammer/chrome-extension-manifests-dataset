{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BetterIVLE",
  "description": "Enhances the new IVLE interface with usability tweaks.",
  "version": "0.160",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "BetterIVLE"
  },
  "background": {
    "scripts": [
      "bivle_page.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://ivle.nus.edu.sg/v1/*"
      ],
      "css": [
        "bivle.css"
      ],
      "js": [
        "jquery.js",
        "bivle.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "declarativeContent",
    "storage"
  ]
}
