{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Gitchi",
  "icons": {
    "16": "G16.png",
    "32": "G32.png",
    "48": "G48.png",
    "128": "G128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "G16.png",
      "32": "G32.png",
      "48": "G48.png",
      "128": "G128.png"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "https://github.com/*/pull/*"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "version": "0.0.5",
  "description": "Turn GitHub Pull Request Comments into a Chat"
}
