{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Legal One - Pacote de melhorias (não-oficial)",
  "description": "Pacote de melhorias para o Legal One feito pela comunidade. Esta extensão não possui nenhuma ligação com a Thomson Reuters",
  "version": "1.25",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.novajus.com.br/*",
        "*://*.dev.int.thomsonreuters.com/*",
        "*://*.thomsonreuters.com/*",
        "*://*.localone.com.br/*",
        "*://*.localone.com/*"
      ],
      "exclude_matches": [
        "*://login.novajus.com.br/*",
        "*://workflow.novajus.com.br/*"
      ],
      "js": [
        "./jquery.min.js",
        "./vue.min.js",
        "./bundle.js"
      ],
      "css": [
        "./main.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "fontawesome-webfont.eot",
    "fontawesome-webfont.svg",
    "fontawesome-webfont.ttf",
    "fontawesome-webfont.woff",
    "fontawesome-webfont.woff2"
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
