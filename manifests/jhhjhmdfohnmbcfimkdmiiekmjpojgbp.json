{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Изменение раскладки VK",
  "description": "Изменение раскладки клавиатуры текста в один клик прямо на странице Вконтакте.",
  "version": "0.2.1.6",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://vk.com/*"
      ]
    }
  ],
  "icons": {
    "16": "Icons/icon16.png",
    "32": "Icons/icon32.png",
    "48": "Icons/icon48.png",
    "128": "Icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ]
}
