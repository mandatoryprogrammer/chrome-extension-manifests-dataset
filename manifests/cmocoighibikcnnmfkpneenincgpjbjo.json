{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Amazon Search Auto-Focus",
  "description": "Automatically focus on search bar when visiting Amazon",
  "version": "4.1",
  "icons": {
    "128": "amazon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/",
        "*://*.amazon.it/",
        "*://*.amazon.fr/",
        "*://*.amazon.de/",
        "*://*.amazon.ca/",
        "*://*.amazon.co.uk/",
        "*://*.amazon.cn/",
        "*://*.amazon.co.jp/",
        "*://*.amazon.com.mx/",
        "*://*.amazon.com.au/",
        "*://*.amazon.com.br/",
        "*://*.amazon.nl/",
        "*://*.amazon.it/",
        "*://*.amazon.es/",
        "*://*.amazon.in/"
      ],
      "js": [
        "script.js"
      ]
    }
  ]
}
