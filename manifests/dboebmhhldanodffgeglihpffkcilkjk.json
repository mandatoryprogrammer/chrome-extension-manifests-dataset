{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "知乎回答追踪器",
  "description": "轻松跟踪知乎回答的更新情况，你们给我搞的这个追踪器啊，一颗赛艇！！！",
  "icons": {
    "128": "bigicon.jpg"
  },
  "version": "1.2.1",
  "background": {
    "scripts": [
      "jquery.min.js",
      "./js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.zhihu.com/*"
      ],
      "js": [
        "jquery.min.js",
        "operation.js"
      ],
      "css": [
        "css/page.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "background"
  ],
  "browser_action": {
    "default_icon": "bigicon.jpg",
    "default_popup": "pop.html"
  },
  "externally_connectable": {
    "matches": [
      "*://www.zhihu.com/*"
    ]
  }
}
