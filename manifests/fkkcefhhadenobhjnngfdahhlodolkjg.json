{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Goodreads ratings for Amazon",
  "short_name": "Goodreads for Amazon",
  "description": "Show Goodreads ratings for books in Amazon.",
  "version": "1.7.5",
  "permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.es/*",
    "*://*.amazon.in/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.de/*",
    "*://*.amazon.it/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.com.br/*",
    "*://smile.amazon.com/*",
    "*://smile.amazon.es/*",
    "*://smile.amazon.in/*",
    "*://smile.amazon.co.jp/*",
    "*://smile.amazon.fr/*",
    "*://smile.amazon.de/*",
    "*://smile.amazon.it/*",
    "*://smile.amazon.nl/*",
    "*://smile.amazon.co.uk/*",
    "*://smile.amazon.ca/*",
    "*://smile.amazon.com.mx/*",
    "*://smile.amazon.com.au/*",
    "*://smile.amazon.com.br/*",
    "*://*.goodreads.com/*",
    "*://www.audible.com/pd/*"
  ],
  "icons": {
    "128": "images/default-128.png",
    "48": "images/default-48.png",
    "24": "images/default-24.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.es/*",
        "*://*.amazon.in/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.de/*",
        "*://*.amazon.it/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.com.br/*",
        "*://smile.amazon.com/*",
        "*://smile.amazon.es/*",
        "*://smile.amazon.in/*",
        "*://smile.amazon.co.jp/*",
        "*://smile.amazon.fr/*",
        "*://smile.amazon.de/*",
        "*://smile.amazon.it/*",
        "*://smile.amazon.nl/*",
        "*://smile.amazon.co.uk/*",
        "*://smile.amazon.ca/*",
        "*://smile.amazon.com.mx/*",
        "*://smile.amazon.com.au/*",
        "*://smile.amazon.com.br/*",
        "*://www.audible.com/pd/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
