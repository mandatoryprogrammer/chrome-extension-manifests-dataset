{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "QR Code: Site to Mobile",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "Display a QR code that contains the URL for the page you are currently on.",
  "browser_action": {
    "default_icon": {
      "19": "icon19x.png",
      "38": "icon38x.png",
      "128": "icon128x.png"
    },
    "default_title": "Show QR Code"
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js",
      "inject.js"
    ],
    "persistent": true
  }
}
