{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Maktoob",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Maktoob helps you to read what matters most.",
  "browser_action": {
    "default_title": "Make this page readable"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "Readability.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js",
      "Readability.js",
      "custom.js"
    ]
  }
}
