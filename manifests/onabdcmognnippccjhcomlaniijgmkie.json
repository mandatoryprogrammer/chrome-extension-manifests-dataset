{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "fragment",
  "description": "A tool for getting URLs of page fragments",
  "version": "0.5",
  "author": "Janusz Majnert",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Get fragment URL",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 2
}
