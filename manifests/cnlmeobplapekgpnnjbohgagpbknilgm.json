{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Email Links",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Scour the internet for links and then send them in an email! ðŸ“¬",
  "homepage_url": "http://onflo.io",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Email Links",
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "js/mail.js"
      ]
    },
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "js/link.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "https://*/*"
  ]
}
