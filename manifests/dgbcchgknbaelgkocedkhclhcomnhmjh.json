{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cruhahore",
  "description": "Stop consuming. Start creating. Break free from addictive social media",
  "version": "0.0.4",
  "browser_action": {
    "default_title": "Cruhahore",
    "default_icon": "icons/cru_logo_sq48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/*",
        "*://twitter.com/*",
        "*://www.linkedin.com/*"
      ],
      "css": [
        "css/disrupt-notification-hooks.css"
      ],
      "js": [
        "js/vendor.js",
        "js/consumer_monitor.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/cru_logo_sq16.png",
    "48": "icons/cru_logo_sq48.png",
    "128": "icons/cru_logo_sq128.png"
  },
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "notifications",
    "<all_urls>"
  ]
}
