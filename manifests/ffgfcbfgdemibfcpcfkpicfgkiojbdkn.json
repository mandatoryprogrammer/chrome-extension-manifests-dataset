{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "hn-friends",
  "version": "1.2",
  "description": "Highlight and tag your friends on Hacker News.",
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "img/tag.svg"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/*"
      ],
      "js": [
        "src/utils.js",
        "src/hn-friends.js"
      ]
    },
    {
      "matches": [
        "https://news.ycombinator.com/user?id=*"
      ],
      "js": [
        "src/user.js"
      ]
    }
  ],
  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "48": "icons/48.png",
      "96": "icons/96.png"
    },
    "default_title": "HN Friends",
    "default_popup": "popup/popup.html"
  }
}
