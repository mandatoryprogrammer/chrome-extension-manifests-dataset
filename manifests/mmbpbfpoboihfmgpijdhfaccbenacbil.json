{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Chapéu Eleitoral",
  "description": "Mostra como candidatos \"passaram o chapéu\" em suas campanhas de 2014 (fonte das doações: TSE).",
  "version": "1.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "res/jquery-1.11.2.min.js",
        "res/jquery.qtip.js",
        "res/jquery.noty.packaged.min.js",
        "res/jquery.ajax-cross-origin.min.js",
        "contentscript.js"
      ],
      "css": [
        "res/jquery.qtip.css",
        "res/animate.css"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "chapeu_32px.png"
  },
  "icons": {
    "32": "chapeu_32px.png",
    "64": "chapeu_64px.png"
  },
  "web_accessible_resources": [
    "final/*.json",
    "contentscript_style.css",
    "res/*.css"
  ],
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
