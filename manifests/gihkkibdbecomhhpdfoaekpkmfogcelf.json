{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Slock",
  "description": "Allows you to block messages from specific users when viewing Slack channels",
  "version": "1.3",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "blocklist.js",
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "icon128.png",
    "default_popup": "domain.html"
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage",
    "tabs",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.slack.com/messages*"
      ],
      "css": [
        "filter.css"
      ],
      "js": [
        "jquery-2.1.4.min.js",
        "blocklist.js",
        "filter.js"
      ],
      "run_at": "document_end"
    }
  ]
}
