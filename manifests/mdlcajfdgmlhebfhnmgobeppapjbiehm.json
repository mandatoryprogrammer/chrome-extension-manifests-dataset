{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Liker - the Ultimate Like/Follow Button",
  "version": "1.1",
  "description": "This tool allows you to like pages and follow multiple people at once",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "popup.js",
    "content.js"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "64": "icon-64.png",
      "128": "icon-128.png"
    }
  }
}
