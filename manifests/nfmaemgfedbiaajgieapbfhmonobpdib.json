{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "QR Generator",
  "description": "creates a popup with a qr to the current site or selected text",
  "version": "0.3.1",
  "icons": {
    "16": "icon.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "*://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon_disabled.png"
    },
    "default_title": "Generate QR Code"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "qr.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
