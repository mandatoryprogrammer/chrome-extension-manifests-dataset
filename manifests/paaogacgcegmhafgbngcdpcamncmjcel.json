{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Dev Indicator",
  "description": "Add an indicator to the title if you have a document open using `localhost/127.0.0.1` domain or `*.test` TLD [RFC2606].",
  "version": "1.2",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://127.0.0.1/*",
        "*://*.test/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}
